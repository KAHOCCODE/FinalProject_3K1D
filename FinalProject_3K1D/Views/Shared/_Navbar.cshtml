@* _Navbar.cshtml *@
<div class="nav-container">
    <nav>
        <div class="container">
            <div class="logo">
                <h1><img src="\image\logo.png" alt="Logo" width="235" height="48" class="d-inline-block align-top"></h1>
            </div>
            <div class="search-bar">
                <input type="text" placeholder="Search movies ...">
                <button><i class="fa fa-search"></i></button>
            </div>
            <ul class="nav-links">
                <li><a href="GiamGia"><i class="fas fa-gift"></i> Promotions</a></li>
                <li class="dropdown">
                    <a href="#" class="dropbtn"><i class="fas fa-film"></i> Movies</a>
                    <div class="dropdown-content">
                        <a href="#">Phim Đang Chiếu</a>
                        <a href="#">Phim Sắp Chiếu</a>
                    </div>
                </li>
                <li><a href="#"><i class="fas fa-utensils"></i> Foods & Drinks</a></li>
                <li><a href="#"><i class="fas fa-phone-alt"></i> Contact</a></li>
                @if (User.Identity.IsAuthenticated)
                {
                    <span>Chào, @User.Identity.Name!</span>
                    <li><a href="#" id="logoutButton"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                }
                else
                {
                    <li><a asp-controller="AccountKH" asp-action="Login"><i class="fas fa-user"></i> Login/Signup</a></li>
                }
            </ul>
        </div>
    </nav>
</div>

<!-- SweetAlert2 JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var logoutButton = document.getElementById('logoutButton');
        if (logoutButton) {
            logoutButton.addEventListener('click', function (event) {
                event.preventDefault();
                Swal.fire({
                    title: 'Bạn có chắc chắn?',
                    text: 'Bạn muốn đăng xuất khỏi tài khoản của mình!',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Đăng xuất',
                    cancelButtonText: 'Hủy'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Redirect to logout action
                        window.location.href = '@Url.Action("Login", "AccountKH")';
                    }
                });
            });
        }
    });
</script>
