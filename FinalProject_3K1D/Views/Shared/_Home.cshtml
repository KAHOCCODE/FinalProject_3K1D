                                <i class="fa-solid fa-ticket"></i>
                                <a href="/Home/Detail?id=P01">Đặt vé</a>


                            </div>

                        </div>
                    </div>
                    <!--hình-->
                    <
                    <img src="~/images/gajaman.jpg" alt="Gajaman">

                </div>
                <!-- More Cards with different movies -->
            </div>
            </a>
        </div>

    </div>
