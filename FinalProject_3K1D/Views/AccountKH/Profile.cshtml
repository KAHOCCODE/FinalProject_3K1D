@{
    ViewData["Title"] = "Profile";
    Layout = null;
}


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hồ Sơ Khách Hàng</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
            color: white;
            font-family: 'Arial', sans-serif;
        }

        .container {
            margin-top: 30px;
        }

        .panel {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            padding: 30px;
            box-shadow: 0px 6px 20px rgba(0, 0, 0, 0.4);
            margin-bottom: 30px;
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .panel:hover {
                transform: scale(1.02);
                box-shadow: 0px 12px 30px rgba(0, 0, 0, 0.5);
            }

            .panel h2 {
                font-size: 2em;
                margin-bottom: 20px;
                color: #e0e0e0;
            }

        .form-control, .btn {
            border-radius: 8px;
        }

        .btn-save {
            background-color: #4caf50;
            border-color: #4caf50;
            color: white;
        }

            .btn-save:hover {
                background-color: #388e3c;
            }

        .btn-change-password {
            background-color: #ff9800;
            border-color: #ff9800;
            color: white;
        }

            .btn-change-password:hover {
                background-color: #e65100;
            }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-control {
            background: #ffffff;
            color: #333;
        }

        .form-label {
            color: #e0e0e0;
        }

        .points-info {
            font-size: 1.5em;
            color: #e0e0e0;
        }

        .panel-footer {
            margin-top: 20px;
            text-align: center;
        }

            .panel-footer button {
                margin: 0 10px;
            }
    </style>
</head>
<body>
    <div class="container">
        <!-- Panel Thông Tin Khách Hàng -->
        <div class="panel">
            <h2>Profile</h2>
            <form id="customer-info-form">
                <div class="form-group">
                    <label for="fullName" class="form-label">Tên</label>
                    <input type="text" class="form-control" id="fullName" placeholder="Nhập tên">
                </div>
                <div class="form-group">
                    <label for="dob" class="form-label">Ngày Sinh</label>
                    <input type="date" class="form-control" id="dob">
                </div>
                <div class="form-group">
                    <label for="phone" class="form-label">Số Điện Thoại</label>
                    <input type="text" class="form-control" id="phone" placeholder="Nhập số điện thoại">
                </div>
                <div class="form-group">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Nhập email">
                </div>
                <div class="panel-footer">
                    <button type="submit" class="btn btn-save">Lưu Thông Tin</button>
                </div>
            </form>
        </div>

        <!-- Panel Điểm Tích Lũy -->
        <div class="panel">
            <h2>Điểm Tích Lũy</h2>
            <p class="points-info">Điểm Tích Lũy của bạn: <span id="points-value">0</span></p>
        </div>

        <!-- Panel Thay Đổi Mật Khẩu -->
        <div class="panel">
            <h2>Thay Đổi Mật Khẩu</h2>
            <form id="change-password-form">
                <div class="form-group">
                    <label for="currentPassword" class="form-label">Mật Khẩu Hiện Tại</label>
                    <input type="password" class="form-control" id="currentPassword" placeholder="Nhập mật khẩu hiện tại">
                </div>
                <div class="form-group">
                    <label for="newPassword" class="form-label">Mật Khẩu Mới</label>
                    <input type="password" class="form-control" id="newPassword" placeholder="Nhập mật khẩu mới">
                </div>
                <div class="form-group">
                    <label for="confirmPassword" class="form-label">Xác Nhận Mật Khẩu Mới</label>
                    <input type="password" class="form-control" id="confirmPassword" placeholder="Xác nhận mật khẩu mới">
                </div>
                <div class="panel-footer">
                    <button type="submit" class="btn btn-change-password">Thay Đổi Mật Khẩu</button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Giả lập hành động lưu thông tin và thay đổi mật khẩu
        document.getElementById('customer-info-form').addEventListener('submit', function (event) {
            event.preventDefault();
            alert('Thông tin khách hàng đã được lưu.');
        });

        document.getElementById('change-password-form').addEventListener('submit', function (event) {
            event.preventDefault();
            alert('Mật khẩu đã được thay đổi.');
        });
    </script>
</body>



