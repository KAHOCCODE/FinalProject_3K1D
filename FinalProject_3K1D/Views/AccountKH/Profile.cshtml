@model FinalProject_3K1D.Models.KhachHang

@{
    ViewData["Title"] = "Profile";
    Layout = null;
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hồ Sơ Khách Hàng</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #121212;
            color: #e0e0e0;
            font-family: 'Montserrat', sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            margin-top: 80px;
            max-width: 600px;
            background-color: #1f1f1f;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.7);
            position: relative;
        }

        .back-button {
            position: absolute;
            top: 20px;
            left: 20px;
            background-color: #333;
            border: none;
            border-radius: 8px;
            padding: 10px 20px;
            color: #ffa500;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }

            .back-button:hover {
                background-color: #444;
            }

            .back-button i {
                margin-right: 8px;
            }

        h2 {
            text-align: center;
            color: #ffa500;
            margin-bottom: 30px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            background-color: #2c2c2c;
            border: 1px solid #444;
            color: #e0e0e0;
            border-radius: 8px;
            padding: 10px 15px;
            font-size: 1rem;
        }

            .form-control:focus {
                border-color: #ffa500;
                background-color: #333;
                color: #e0e0e0; /* Chữ màu trắng khi ô được chọn */
                box-shadow: none;
            }

        .form-label {
            color: #ffa500;
            font-weight: 600;
            margin-bottom: 8px;
        }

        .btn {
            padding: 12px;
            border: none;
            border-radius: 8px;
            font-weight: bold;
            transition: background-color 0.3s;
            width: 100%;
            margin-top: 15px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .btn-primary {
            background-color: #ffa500;
            color: #121212;
        }

            .btn-primary:hover {
                background-color: #ffb833;
            }

        .btn-secondary {
            background-color: #444;
            color: #e0e0e0;
        }

            .btn-secondary:hover {
                background-color: #555;
            }

        .btn-warning {
            background-color: #ffa500;
            color: #121212;
        }

            .btn-warning:hover {
                background-color: #ffb833;
            }

        .edit-icon {
            display: block;
            margin: 0 auto;
            font-size: 2.5rem;
            color: #ffa500;
            cursor: pointer;
            text-align: center;
            margin-bottom: 20px;
            transition: color 0.3s;
        }

            .edit-icon:hover {
                color: #ffb833;
            }
    </style>
</head>

<body>
    <button class="back-button" onclick="window.history.back()">
        <i class="fas fa-arrow-left"></i> Quay lại
    </button>

    <div class="container">
        <h2>Hồ Sơ Khách Hàng</h2>
        <div class="edit-icon">
            <i class="fas fa-user-edit" id="edit-icon"></i>
        </div>
        <form id="customer-info-form" method="post" action="@Url.Action("UpdateProfile", "AccountKH")">
            <div class="form-group">
                <label for="fullName" class="form-label">Tên</label>
                <input type="text" name="HoTen" class="form-control" id="fullName" value="@Model.HoTen" readonly>
            </div>
            <div class="form-group">
                <label for="dob" class="form-label">Ngày Sinh</label>
                <input type="date" name="NgaySinh" class="form-control" id="dob" value="@Model.NgaySinh?.ToString("yyyy-MM-dd")" readonly>
            </div>
            <div class="form-group">
                <label for="cccd" class="form-label">CCCD</label>
                <input type="text" name="Cccd" class="form-control" id="cccd" value="@Model.Cccd" readonly>
            </div>
            <div class="form-group">
                <label for="address" class="form-label">Địa Chỉ</label>
                <input type="text" name="DiaChi" class="form-control" id="address" value="@Model.DiaChi" readonly>
            </div>
            <div class="form-group">
                <label for="phone" class="form-label">Số Điện Thoại</label>
                <input type="text" name="Sdt" class="form-control" id="phone" value="@Model.Sdt" readonly>
            </div>
            <div class="form-group">
                <label for="points" class="form-label">Điểm Tích Lũy</label>
                <input type="text" class="form-control" id="points" value="@ViewBag.DiemTichLuy" readonly>
            </div>
            <div class="form-group">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="Email" class="form-control" id="email" value="@Model.Email" readonly>
            </div>
            <button type="submit" class="btn btn-primary">Cập Nhật</button>
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Hủy</a>
            <a href="@Url.Action("ChangePassword", "AccountKH")" class="btn btn-warning">Đổi Mật Khẩu</a>
        </form>
    </div>

    <script>
        document.getElementById('edit-icon').addEventListener('click', function () {
            var formElements = document.querySelectorAll('#customer-info-form input');
            formElements.forEach(function (element) {
                if (element.id !== 'phone' && element.id !== 'points') {
                    element.removeAttribute('readonly');
                }
            });
        });
    </script>
</body>
