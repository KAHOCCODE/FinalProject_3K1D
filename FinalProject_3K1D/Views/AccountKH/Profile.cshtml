@model FinalProject_3K1D.Models.KhachHang

@{
    ViewData["Title"] = "Profile";
    Layout = null;
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hồ Sơ Khách Hàng</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: #1a1a1a; /* Màu nền tối */
            color: #e0e0e0; /* Màu chữ sáng */
            font-family: 'Roboto', sans-serif;
        }

        .container {
            margin-top: 50px;
            display: flex;
            justify-content: center;
        }

        .profile-wrapper {
            background: #2c2c2c; /* Màu nền của khung hồ sơ */
            border-radius: 20px;
            box-shadow: 0px 20px 30px rgba(0, 0, 0, 0.3);
            width: 100%;
            max-width: 800px;
            overflow: hidden;
            position: relative;
        }

        .profile-header {
            background: #333333; /* Màu nền header */
            color: #ffffff; /* Màu chữ trên header */
            padding: 30px;
            text-align: center;
            position: relative;
            z-index: 1;
        }

            .profile-header::after {
                content: '';
                position: absolute;
                top: 50%;
                left: 50%;
                width: 150%;
                height: 150%;
                background: rgba(255, 165, 0, 0.2); /* Màu cam nhẹ */
                border-radius: 50%;
                transform: translate(-50%, -50%);
                z-index: 0;
            }

            .profile-header h1 {
                font-size: 2.5rem;
                margin: 0;
            }

        .profile-card {
            padding: 30px;
            background: #333333; /* Màu nền của khung thông tin */
            border-top: 4px solid #ff9800; /* Đường viền trên màu cam */
            position: relative;
            z-index: 1;
        }

            .profile-card .info-item {
                display: flex;
                justify-content: space-between;
                margin-bottom: 20px;
                padding: 10px;
                border-radius: 8px;
                background: #444444; /* Màu nền của các mục thông tin */
                transition: background 0.3s;
            }

                .profile-card .info-item:hover {
                    background: #555555; /* Hiệu ứng khi di chuột qua mục thông tin */
                }

                .profile-card .info-item label {
                    font-weight: 600;
                    width: 150px;
                    text-align: right;
                    color: #ff9800; /* Màu chữ cam cho nhãn */
                }

                .profile-card .info-item input {
                    width: calc(100% - 160px);
                    background: #2c2c2c; /* Màu nền của input */
                    color: #e0e0e0; /* Màu chữ trong input */
                    border: 1px solid #555555; /* Đường viền của input */
                }

        .edit-icon {
            position: absolute;
            top: 20px;
            right: 20px;
            font-size: 1.5rem;
            color: #ff9800; /* Màu cam cho biểu tượng chỉnh sửa */
            cursor: pointer;
            transition: color 0.3s, transform 0.3s;
            z-index: 2;
        }

            .edit-icon:hover {
                color: #e65100; /* Màu cam đậm khi di chuột qua */
                transform: scale(1.1);
            }

        .btn-group {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-top: 20px;
        }

        .btn-primary, .btn-secondary, .btn-warning {
            transition: background-color 0.3s, transform 0.3s;
        }

        .btn-primary {
            background-color: #555555; /* Màu nền xám cho nút chính */
            border: none;
            color: #ffffff;
        }

            .btn-primary:hover {
                background-color: #444444; /* Màu nền xám đậm khi di chuột qua */
                transform: scale(1.05);
            }

        .btn-secondary {
            background-color: #666666; /* Màu nền xám cho nút phụ */
            border: none;
            color: #ffffff;
        }

            .btn-secondary:hover {
                background-color: #555555; /* Màu nền xám đậm khi di chuột qua */
                transform: scale(1.05);
            }

        .btn-warning {
            background-color: #ff9800; /* Màu cam cho nút cảnh báo */
            border: none;
            color: #212529;
        }

            .btn-warning:hover {
                background-color: #e65100; /* Màu cam đậm khi di chuột qua */
                transform: scale(1.05);
            }

        .form-control[readonly] {
            background-color: #2c2c2c; /* Màu nền của input chỉ đọc */
            color: #e0e0e0; /* Màu chữ trong input chỉ đọc */
            border-color: #555555; /* Đường viền của input chỉ đọc */
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="profile-wrapper">
            <div class="profile-header">
                <h1>Hồ Sơ Khách Hàng</h1>
                <i class="fas fa-edit edit-icon" id="edit-icon"></i>
            </div>
            <div class="profile-card">
                <form id="customer-info-form" method="post" action="@Url.Action("UpdateProfile", "AccountKH")">
                    <div class="info-item">
                        <label for="fullName">Tên:</label>
                        <input type="text" name="HoTen" class="form-control" id="fullName" value="@Model.HoTen" readonly>
                    </div>
                    <div class="info-item">
                        <label for="dob">Ngày Sinh:</label>
                        <input type="date" name="NgaySinh" class="form-control" id="dob" value="@Model.NgaySinh?.ToString("yyyy-MM-dd")" readonly>
                    </div>
                    <div class="info-item">
                        <label for="cccd">CCCD:</label>
                        <input type="text" name="Cccd" class="form-control" id="cccd" value="@Model.Cccd" readonly>
                    </div>
                    <div class="info-item">
                        <label for="address">Địa Chỉ:</label>
                        <input type="text" name="DiaChi" class="form-control" id="address" value="@Model.DiaChi" readonly>
                    </div>
                    <div class="info-item">
                        <label for="phone">Số Điện Thoại:</label>
                        <input type="text" name="Sdt" class="form-control" id="phone" value="@Model.Sdt" readonly>
                    </div>
                    <div class="info-item">
                        <label for="points">Điểm Tích Lũy:</label>
                        <input type="text" class="form-control" id="points" value="@ViewBag.DiemTichLuy" readonly>
                    </div>
                    <div class="info-item">
                        <label for="email">Email:</label>
                        <input type="email" name="Email" class="form-control" id="email" value="@Model.Email" readonly>
                    </div>
                    <div class="btn-group">
                        <button type="submit" class="btn btn-primary">Cập Nhật</button>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Hủy</a>
                        <a href="@Url.Action("ChangePassword", "AccountKH")" class="btn btn-warning">Đổi Mật Khẩu</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script>
        document.getElementById('edit-icon').addEventListener('click', function () {
            var formElements = document.querySelectorAll('#customer-info-form input');
            formElements.forEach(function (element) {
                if (element.id !== 'phone' && element.id !== 'points') {
                    element.removeAttribute('readonly');
                }
            });
        });
    </script>
</body>
