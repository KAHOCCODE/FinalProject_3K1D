@model FinalProject_3K1D.Models.KhachHang

@{
    ViewData["Title"] = "Profile";
    Layout = null;
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hồ Sơ Khách Hàng</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
            color: white;
            font-family: 'Arial', sans-serif;
        }

        .container {
            margin-top: 30px;
        }

        .panel {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            padding: 30px;
            box-shadow: 0px 6px 20px rgba(0, 0, 0, 0.4);
            margin-bottom: 30px;
            position: relative;
        }

        .edit-icon {
            position: absolute;
            top: 20px;
            right: 20px;
            cursor: pointer;
            font-size: 1.5rem;
            color: #ff9800;
        }

            .edit-icon:hover {
                color: #e65100;
            }

        .form-control, .btn {
            border-radius: 8px;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-control {
            background: #ffffff;
            color: #333;
        }

        .form-label {
            color: #e0e0e0;
        }

        .points-info {
            font-size: 1.5em;
            color: #e0e0e0;
        }

        .panel-footer {
            margin-top: 20px;
            text-align: center;
        }

            .panel-footer button {
                margin: 0 10px;
            }

        .form-control[readonly] {
            background-color: #f5f5f5;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="panel">
            <i class="fas fa-edit edit-icon" id="edit-icon"></i>
            <h2>Hồ Sơ Khách Hàng</h2>
            <form id="customer-info-form" method="post" action="@Url.Action("UpdateProfile", "AccountKH")">
                <div class="form-group">
                    <label for="fullName" class="form-label">Tên</label>
                    <input type="text" name="HoTen" class="form-control" id="fullName" value="@Model.HoTen" readonly>
                </div>
                <div class="form-group">
                    <label for="dob" class="form-label">Ngày Sinh</label>
                    <input type="date" name="NgaySinh" class="form-control" id="dob" value="@Model.NgaySinh?.ToString("yyyy-MM-dd")" readonly>
                </div>
                <div class="form-group">
                    <label for="cccd" class="form-label">CCCD</label>
                    <input type="text" name="Cccd" class="form-control" id="cccd" value="@Model.Cccd" readonly>
                </div>
                <div class="form-group">
                    <label for="address" class="form-label">Địa Chỉ</label>
                    <input type="text" name="DiaChi" class="form-control" id="address" value="@Model.DiaChi" readonly>
                </div>
                <div class="form-group">
                    <label for="phone" class="form-label">Số Điện Thoại</label>
                    <input type="text" name="Sdt" class="form-control" id="phone" value="@Model.Sdt" readonly>
                </div>
                <div class="form-group">
                    <label for="points" class="form-label">Điểm Tích Lũy</label>
                    <input type="text" class="form-control" id="points" value="@ViewBag.DiemTichLuy" readonly>
                </div>
                <div class="form-group">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="Email" class="form-control" id="email" value="@Model.Email" readonly>
                </div>
                <div class="panel-footer">
                    <button type="submit" class="btn btn-primary">Cập Nhật</button>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Hủy</a>
                </div>
                <div>
                    <a href="@Url.Action("ChangePassword", "AccountKH")" class="btn btn-warning">Đổi Mật Khẩu</a>
                </div>
            </form>
        </div>
    </div>
</body>
<script>
    document.getElementById('edit-icon').addEventListener('click', function () {
        var formElements = document.querySelectorAll('#customer-info-form input');
        formElements.forEach(function (element) {
            if (element.id !== 'phone' && element.id !== 'points') {
                element.removeAttribute('readonly');
            }
        });
    });
</script>
