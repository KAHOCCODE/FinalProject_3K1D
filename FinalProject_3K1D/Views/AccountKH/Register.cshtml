@model FinalProject_3K1D.ViewModels.RegisterKH

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-container">
    <div class="login-box">
        <h2>Register</h2>

        <form asp-action="Register">
            <div class="form-group">
                <label asp-for="HoTen" class="form-label">Full Name</label>
                <input asp-for="HoTen" class="form-control" placeholder="Full Name" />
                <span asp-validation-for="HoTen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgaySinh" class="form-label">Date of Birth</label>
                <input asp-for="NgaySinh" class="form-control" type="date" />
                <span asp-validation-for="NgaySinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SDT" class="form-label">Phone Number</label>
                <input asp-for="SDT" class="form-control" placeholder="Phone Number" />
                <span asp-validation-for="SDT" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CCCD" class="form-label">ID Card Number</label>
                <input asp-for="CCCD" class="form-control" placeholder="ID Card Number" />
                <span asp-validation-for="CCCD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserKH" class="form-label">Username</label>
                <input asp-for="UserKH" class="form-control" placeholder="Username" />
                <span asp-validation-for="UserKH" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassKH" class="form-label">Password</label>
                <input asp-for="PassKH" class="form-control" type="password" placeholder="Password" />
                <span asp-validation-for="PassKH" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassKH" class="form-label">Confirm Password</label>
                <input asp-for="ConfirmPassKH" class="form-control" type="password" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassKH" class="text-danger"></span>
            </div>
            <button type="submit" class="btn login-button">Register</button>
            <div class="extra-links">
                <a href="@Url.Action("Login", "AccountKH")" class="sign-up-link">Already have an account? Sign In</a>
            </div>
        </form>
    </div>
</div>
