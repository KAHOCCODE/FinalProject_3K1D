@model FinalProject_3K1D.ViewModels.LoginKH
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Roboto', sans-serif;
        background: linear-gradient(to bottom, #0f2027, #203a43, #2c5364); fixed;
        background-size: cover;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .login-container {
        background: rgba(0, 0, 0, 0.7);
        padding: 20px;
        border-radius: 10px;
        width: 100%;
        max-width: 400px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
    }

    .login-box h2 {
        color: #fff;
        text-align: center;
        margin-bottom: 20px;
    }

    .social-buttons {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-bottom: 30px;
        color: #fff;
        font-weight: bold;
        font-family: 'Roboto', sans-serif;

    }

    

    .form-group {
        margin-bottom: 15px;
    }

    .form-label {
        color: #ffc107;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 5px;
        margin-bottom: 10px;
    }

    .remember-me {
        display: flex;
        align-items: center;
        color: #fff;
    }

    .login-button {
        width: 100%;
        padding: 10px;
        background-color: #FFC107; /* Default background color */
        border: none;
        border-radius: 5px;
        color: #000;
        font-size: 16px;
        cursor: pointer;
        margin-bottom: 20px;
        transition: background-color 0.3s, box-shadow 0.3s; /* Smooth transition for hover effects */
    }

        .login-button:hover {
            background: linear-gradient(to right, #F57F17, #FF5722); /* Change to a different shade of yellow when hovered */
        }

        .login-button:active {
            background-color: #d39e00; /* Even lighter shade of yellow when button is pressed */
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.2); /* Optional: Add a shadow effect for a pressed look */
        }



    .extra-links {
        text-align: center;
        color: #fff;
    }

    .sign-up-link, .forgot-password-link {
        color: #ffc107;
        text-decoration: none;
        display: block;
        margin-top: 5px;
    }

</style>

<div class="login-container">
    <div class="login-box">
        <h2>Sign In</h2>
        <div class="social-buttons">
            <div class="letter">3</div>
            <div class="letter">K</div>
            <div class="letter">1</div>
            <div class="letter">D</div>
        </div>

        <form asp-action="Login">
            <div class="form-group">
                <label asp-for="@Model.UserKh" class="form-label"></label>
                <input asp-for="@Model.UserKh" class="form-control" placeholder="username" />
                <span asp-validation-for="@Model.UserKh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.PassKh" class="form-label"></label>
                <input asp-for="@Model.PassKh" class="form-control" placeholder="password" />
                <span asp-validation-for="@Model.PassKh" class="text-danger"></span>
            </div>
            <div class="form-group remember-me">
                <input type="checkbox" id="remember" />
                <label for="remember">Remember Me</label>
            </div>
            <button type="submit" class="btn login-button">Login</button>
            <div class="extra-links">
                <a href="Register" class="sign-up-link">Don't have an account? Sign Up</a>
                <a asp-control="KhachHang" asp-action="QuenMatKhau" class="forgot-password-link">Forgot your password?</a>
            </div>
        </form>
    </div>
</div>
