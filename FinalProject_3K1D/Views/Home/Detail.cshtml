@{
    Layout = null;
}
@model FinalProject_3K1D.Models.Phim

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi Tiết Phim</title>
    <link rel="stylesheet" href="path/to/your/bootstrap.min.css">
    <link rel="stylesheet" href="path/to/your/site.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap">

    <style>
        body {
            background: #121212; /* Nền tối cho trang */
            font-family: 'Roboto', sans-serif;
            color: #e0e0e0; /* Màu chữ sáng để nổi bật trên nền tối */
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .movie-detail-page {
            padding: 40px;
            background: #1e1e1e; /* Nền tối cho phần chi tiết phim */
            border-radius: 12px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.6);
            margin: 40px auto;
            position: relative;
            overflow: hidden;
        }

        .movie-header {
            display: flex;
            flex-wrap: wrap;
            align-items: flex-start;
            border-bottom: 2px solid #333;
            padding-bottom: 20px;
            margin-bottom: 20px;
        }

        .movie-poster {
            border-radius: 12px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.8);
            width: 100%;
            max-width: 350px;
            height: auto;
            margin-right: 20px;
            border: 5px solid #ff5722; /* Đường viền sáng để tạo điểm nhấn */
        }

        .movie-info {
            flex: 1;
            padding: 20px;
            background: #333; /* Nền tối cho phần thông tin phim */
            border-radius: 8px;
        }

            .movie-info h1 {
                font-size: 2.5rem;
                color: #ff5722; /* Màu chữ sáng để nổi bật */
                margin-bottom: 15px;
                font-weight: 700;
                text-transform: uppercase;
                background: linear-gradient(to right, #ff5722, #ff9800); /* Gradient để tạo hiệu ứng nổi bật */
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }

            .movie-info p {
                font-size: 1.1rem;
                color: #e0e0e0; /* Màu chữ sáng */
                margin-bottom: 12px;
                line-height: 1.6;
            }

        .movie-description {
            margin-bottom: 40px;
        }

            .movie-description h2 {
                font-size: 2rem;
                color: #ff5722; /* Màu chữ sáng để nổi bật */
                margin-bottom: 15px;
                font-weight: 700;
                background: linear-gradient(to right, #ff5722, #ff9800); /* Gradient để tạo hiệu ứng nổi bật */
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }

            .movie-description p {
                font-size: 1.2rem;
                line-height: 1.8;
                color: #e0e0e0; /* Màu chữ sáng */
            }

        .booking-section {
            margin-top: 40px;
        }

            .booking-section h2 {
                font-size: 1.8rem;
                color: #ff5722; /* Màu chữ sáng để nổi bật */
                margin-bottom: 15px;
                font-weight: 700;
            }

            .booking-section p {
                font-size: 1.1rem;
                color: #e0e0e0; /* Màu chữ sáng */
                margin-bottom: 15px;
            }

        .btn-book {
            background: #ff5722; /* Nút đặt vé nổi bật */
            color: #fff;
            border: none;
            padding: 14px 24px;
            text-transform: uppercase;
            font-weight: 700;
            border-radius: 8px;
            transition: background 0.3s, transform 0.3s;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.6);
            cursor: pointer;
        }

            .btn-book:hover {
                background: #e64a19; /* Màu nền khi hover */
                transform: scale(1.05);
            }

        .date-buttons, .time-buttons {
            display: flex;
            flex-wrap: wrap;
            gap: 12px;
            margin-bottom: 30px;
        }

        .btn-date, .btn-time {
            background: #ff5722; /* Nút chọn ngày và giờ nổi bật */
            color: #fff;
            border: none;
            padding: 10px 18px;
            border-radius: 8px;
            font-size: 1rem;
            cursor: pointer;
            transition: background 0.3s;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.6);
        }

            .btn-date:hover, .btn-time:hover {
                background: #e64a19; /* Màu nền khi hover */
            }

        .btn-selected {
            background: #ff5722; /* Màu nền khi chọn */
            color: #fff;
        }

        .btn-back {
            display: inline-flex;
            align-items: center;
            background: #ff5722; /* Màu nền của nút */
            color: #fff;
            padding: 10px 20px;
            border-radius: 8px;
            font-size: 1rem;
            text-decoration: none; /* Xóa gạch chân của liên kết */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.6);
            transition: background 0.3s, transform 0.3s;
            margin-bottom: 20px; /* Khoảng cách dưới nút */
        }

            .btn-back:hover {
                background: #e64a19; /* Màu nền khi hover */
                transform: scale(1.05);
            }

            .btn-back i {
                margin-right: 8px; /* Khoảng cách giữa biểu tượng và văn bản */
            }
        /* Additional styling for the cinema selection combobox */
  .cinema-selection {
      margin-bottom: 30px;
  }

      .cinema-selection label {
          font-size: 1.2rem;
          font-weight: 700;
          color: #ff5722;
          margin-right: 15px;
      }

      .cinema-selection select {
          padding: 10px;
          font-size: 1rem;
          border-radius: 8px;
          border: none;
          background: #ff5722;
          color: #fff;
          cursor: pointer;
          transition: background 0.3s;
          box-shadow: 0 4px 8px rgba(0, 0, 0, 0.6);
      }

          .cinema-selection select:hover {
              background: #e64a19;
          }
    </style>
</head>
<body>
    <div class="container movie-detail-page">
        <!-- Nút quay lại -->
        <a href="javascript:history.back()" class="btn-back">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
        <div class="movie-header">
            <!-- Movie Poster -->
            @if (Model != null)
            {
                <img src="~/image/ApPhich/@Model.ApPhich" alt="@Model.TenPhim" class="movie-poster">
            }
            <!-- Movie Information -->
            <div class="movie-info">
                <h1>@Model.TenPhim</h1>
                <p><i class="fas fa-film"></i> <strong>Thể loại:</strong> @Model.TenTheoLoai</p>
                <p><i class="fas fa-user-tie"></i> <strong>Đạo diễn:</strong> @Model.DaoDien</p>
                <p><i class="fas fa-flag"></i> <strong>Quốc gia:</strong> @Model.QuocGiaSanXuat</p>
                <p><i class="fas fa-clock"></i> <strong>Thời lượng:</strong> @Model.ThoiLuong</p>
                <p><i class="fas fa-calendar-day"></i> <strong>Khởi chiếu:</strong> @Model.NgayKhoiChieu</p>
                <p>
                    <i class="fas fa-star"></i> <strong>Điểm trung bình:</strong>
                    @for (int i = 0; i < 5; i++)
                    {
                        if (i < ViewBag.AverageRating)
                        {
                            <i class="fas fa-star"></i>
                        }
                        else
                        {
                            <i class="far fa-star"></i>
                        }
                    }
                </p>
            </div>
        </div>
        <!-- Movie Description -->
        <div class="movie-description">
            <h2>Mô Tả</h2>
            <p>@Model.MoTa</p>
        </div>
        
        <!-- Booking Section -->
        <div class="booking-section">
            <!-- Cinema Selection Section -->
            <div class="cinema-selection">
                <label for="cinema-select"><i class="fas fa-map-marker-alt"></i> Chọn Rạp:</label>
                <select id="cinema-select" name="cinema">
                    @foreach (var cinemaGroup in Model.LichChieus.GroupBy(lc => lc.TenRap).Select(g => g.First()))
                    {
                        <option value="@(cinemaGroup.IdRap)">@cinemaGroup.TenRap</option>
                    }
                </select>
            </div>

            <h2>Lịch Chiếu</h2>
            <div id="showtime-container" class="time-buttons">
                <div class="time-buttons">
                    @foreach (var lichChieu in Model.LichChieus)
                    {
                        <label class="btn-time">
                            <input type="radio" name="selectedLichChieu" value="@lichChieu.IdLichChieu">
                            Rạp: @(lichChieu.TenRap ?? "Unknown") -  Phòng: @(lichChieu.TenPhong ?? "Unknown") - @lichChieu.GioChieu
                        </label>
                    }
                </div>
            </div>
            <button class="btn-book" onclick="bookTickets()">Đặt Vé</button>
        </div>
        <!-- Rating Section -->
        @* <div class="rating-section">
            <h2>Đánh Giá</h2>
            @if (Model.DanhGias.Any())
            {
                <ul class="rating-list">
                    @foreach (var danhGia in Model.DanhGias.OrderByDescending(d => d.NgayDanhGia))
                    {
                        <li class="rating-item">
                            <strong>@(danhGia.KhachHang != null ? danhGia.KhachHang.HoTen : "Unknown")</strong>

                            <p>
                                @for (int i = 0; i < 5; i++)
                                {
                                    if (i < danhGia.Diem)
                                    {
                                        <i class="fas fa-star"></i>
                                    }
                                    else
                                    {
                                        <i class="far fa-star"></i>
                                    }
                                }
                            </p>
                            @if (!string.IsNullOrEmpty(danhGia.NoiDung))
                            {
                                <p>@danhGia.NoiDung</p>
                            }
                            <small>Ngày đánh giá: @danhGia.NgayDanhGia.ToString("dd/MM/yyyy")</small>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p>Chưa có đánh giá nào.</p>
            }
        </div> *@
    </div>

    <script src="path/to/your/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('cinema-select').addEventListener('change', function () {
            const cinemaId = this.value;
            if (cinemaId) {
                fetch(`/HomeController/GetShowtimes?cinemaId=${encodeURIComponent(cinemaId)}`)
                    .then(response => response.json())
                    .then(data => {
                        const showtimeContainer = document.getElementById('showtime-container');
                        showtimeContainer.innerHTML = ''; // Clear existing showtimes
                        if (data.length === 0) {
                            showtimeContainer.innerHTML = '<p>Không có lịch chiếu cho rạp này.</p>';
                        } else {
                            data.forEach(showtime => {
                                const button = document.createElement('label');
                                button.className = 'btn-time';
                                button.innerHTML = `
                                                            <input type="radio" name="selectedLichChieu" value="${showtime.IdLichChieu}">
                                                            ${new Date(showtime.GioChieu).toLocaleTimeString()} - Phòng: ${showtime.TenPhong || "Unknown"}
                                                        `;
                                showtimeContainer.appendChild(button);
                            });
                        }
                    })
                    .catch(error => {
                        console.error('Error fetching showtimes:', error);
                        alert("Đã xảy ra lỗi khi tải lịch chiếu.");
                    });
            } else {
                // Clear showtimes if no cinema is selected
                document.getElementById('showtime-container').innerHTML = '';
            }
        });

        function bookTickets() {
            const selectedLichChieu = document.querySelector('input[name="selectedLichChieu"]:checked');

            if (!selectedLichChieu) {
                alert("Vui lòng chọn một giờ chiếu.");
                return;
            }

            fetch('/Home/SaveBookingSession', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': '@Html.AntiForgeryToken()'
                },
                body: JSON.stringify({
                    movieId: '@Model.IdPhim',
                    selectedLichChieuId: selectedLichChieu.value // Lưu IdLichChieu đã chọn
                })
            }).then(response => {
                if (!response.ok) {
                    throw new Error('Có lỗi xảy ra');
                }
                return response.json();
            }).then(data => {
                if (!data.success) {
                    alert(data.message);
                    window.location.href = "/AccountKH/Login";
                } else {
                    alert(data.message);
                    window.location.href = "/Home/ChonGhe";
                }
            }).catch(error => {
                console.error('Error:', error);
                alert("Đã xảy ra lỗi khi lưu thông tin.");
            });
        }
    </script>
</body>
</html>
