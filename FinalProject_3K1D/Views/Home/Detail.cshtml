@{
    Layout = null;
}
@model FinalProject_3K1D.Models.Phim
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi Tiết Phim</title>
    <link rel="stylesheet" href="path/to/your/bootstrap.min.css">
    <link rel="stylesheet" href="path/to/your/site.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap">

    <style>
        body {
            background: linear-gradient(to right, #ff7e5f, #feb47b); /* Gradient nền cho trang */
            font-family: 'Poppins', sans-serif;
        }


        .movie-detail-page {
            padding: 30px;
            background: linear-gradient(to right, #ffffff, #b3e5fc); /* Gradient trắng và xanh bạc */
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            margin: 20px auto;
            max-width: 1200px;
        }

        .movie-header {
            display: flex;
            align-items: flex-start;
            margin-bottom: 30px;
        }

        .movie-poster {
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
            width: 100%;
            max-width: 300px; /* Điều chỉnh kích thước tối đa */
            height: auto; /* Giữ tỷ lệ hình ảnh */
            margin-right: 20px; /* Khoảng cách giữa poster và thông tin phim */
        }

        .movie-info {
            flex: 1; /* Cho phép phần thông tin phim mở rộng để chiếm không gian còn lại */
            margin-left: 20px; /* Khoảng cách giữa poster và thông tin phim */
        }

            .movie-info h1 {
                margin-bottom: 10px;
                font-size: 2.5rem;
                color: #333;
                background: linear-gradient(to right, #ff5722, #ff9800); /* Gradient cho tiêu đề */
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                font-weight: bold; /* Thêm thuộc tính in đậm */
                padding: 5px 0;
            }


            .movie-info p {
                font-size: 1.1rem;
                color: #555;
            }

        .movie-description {
            margin-bottom: 30px;
        }

            .movie-description h2 {
                font-size: 2rem;
                color: #fff;
                background: linear-gradient(to right, #ff5722, #ff9800); /* Gradient cho tiêu đề mô tả */
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                border-bottom: 2px solid transparent;
                padding-bottom: 10px;
                margin-bottom: 15px;
                font-weight: bold; /* Thêm thuộc tính in đậm */
            }

            .movie-description p {
                font-size: 1.2rem;
                line-height: 1.6;
                color: #666;
            }

        .booking-section {
            margin-top: 50px; /* Điều chỉnh khoảng cách với nội dung phía trên */
        }

            .booking-section h2 {
                font-size: 1.8rem;
                color: #fff;
                background: linear-gradient(to right, #ff5722, #ff9800); /* Gradient cho tiêu đề đặt vé */
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                margin-bottom: 15px;
                font-weight: bold; /* Thêm thuộc tính in đậm */
            }

            .booking-section p {
                font-size: 1.1rem;
                color: #555;
            }

        .btn-book {
            background: linear-gradient(to right, #ff5722, #ff9800); /* Gradient cho nút đặt vé */
            color: white;
            border: none;
            padding: 12px 20px;
            text-transform: uppercase;
            font-weight: bold;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .btn-book:hover {
                background: linear-gradient(to right, #ab47bc, #8e24aa); /* Gradient khi hover */
            }

        .date-buttons, .time-buttons {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
        }

        .btn-date, .btn-time {
            background: #ff5722;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .btn-date:hover, .btn-time:hover {
                background: #e64a19;
            }

        .btn-selected {
            background: #feb47b;
        }

    </style>



        </head>
        <body>
            <div class="container movie-detail-page">

                <div class="movie-header">

                    <!-- Phần Poster Phim -->

            @if (@Model != null)
            {
        <img src="~/images/@Model.ApPhich" alt="@Model.ApPhich" class="movie-poster">
            }
                    <!-- Phần Thông Tin Phim -->
                    <div class="movie-info">
                        <h1>@Model.TenPhim</h1>
                        <p><i class="fas fa-film"></i> <strong>Thể loại:</strong> @Model.TenTheoLoai</p>
                        <p><i class="fas fa-user-tie"></i> <strong>Đạo diễn:</strong> @Model.DaoDien</p>
                        <p><i class="fas fa-flag"></i> <strong>Quốc gia:</strong> @Model.QuocGiaSanXuat</p>
                        <p><i class="fas fa-clock"></i> <strong>Thời lượng:</strong> @Model.ThoiLuong</p>
                        <p><i class="fas fa-calendar-day"></i> <strong>Khởi chiếu:</strong>@Model.NgayKhoiChieu</p>

                    </div>
                </div>
                <!-- Phần Mô Tả Phim -->
                <div class="movie-description">
                    <h2>Mô Tả</h2>
                    <p>@Model.MoTa</p>
                </div>
                <!-- Phần Đặt Vé -->
                 <div class="booking-section">
                     <h2>Lịch Chiếu</h2>
            <div class="time-buttons">
                @foreach (var lichChieu in Model.LichChieus)
                {
                <label class="btn-time">
                    <input type="checkbox" name="selectedTimes" value="@lichChieu.GioChieu"> @lichChieu.GioChieu
                </label>
                }
            
            </div>
                </body>
                <button class="btn-book" onclick="bookTickets()">Đặt Vé</button>
<script src="path/to/your/bootstrap.bundle.min.js"></script>


   <script>
    function bookTickets() {
        // Lấy tất cả các checkbox đã chọn
        const selectedTimes = [];
        document.querySelectorAll('input[name="selectedTimes"]:checked').forEach(function(checkbox) {
            selectedTimes.push(checkbox.value);
        });

        if (selectedTimes.length === 0) {
            alert("Vui lòng chọn ít nhất một giờ chiếu.");
            return;
        }

        // Gửi dữ liệu tới server để lưu vào session
        fetch('/Home/SaveBookingSession', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': '@Html.AntiForgeryToken()' // Bảo mật CSRF
            },
            body: JSON.stringify({
                movieId: '@Model.IdPhim', // Gửi ID phim
                selectedTimes: selectedTimes // Gửi giờ chiếu đã chọn
            })
        }).then(response => {
            if (!response.ok) {
                throw new Error('Có lỗi xảy ra');
            }
            return response.json();
        }).then(data => {
            // Xử lý kết quả sau khi lưu vào session
            alert("Thông tin đã được lưu vào session!");
            window.location.href = "/Home/Payment"; // Chuyển đến trang thanh toán hoặc trang tiếp theo
        }).catch(error => {
            console.error('Error:', error);
            alert("Đã xảy ra lỗi khi lưu thông tin.");
        });
    }
</script>

