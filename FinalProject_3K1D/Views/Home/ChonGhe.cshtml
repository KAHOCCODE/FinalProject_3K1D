<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Đặt Ghế</title>
    @{
        Layout = null;
    }
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .screen {
            text-align: center;
            margin-bottom: 20px;
            font-weight: bold;
        }

        .seats {
            display: grid;
            grid-template-columns: repeat(10, 40px); /* 10 ghế mỗi hàng */
            grid-gap: 5px;
            justify-content: center;
        }

        .seat {
            width: 40px;
            height: 40px;
            background-color: #4CAF50; /* Màu xanh cho ghế trống */
            border: 1px solid #ddd;
            cursor: pointer;
            text-align: center;
            line-height: 40px;
            color: white;
            font-weight: bold;
        }

        .seat.selected {
            background-color: #FF5722; /* Màu cam khi ghế được chọn */
        }

        .seat.occupied {
            background-color: #444; /* Màu xám cho ghế đã đặt */
            cursor: not-allowed;
        }

        .btn-payment {
            display: block;
            margin: 20px auto;
            padding: 10px 20px;
            background-color: #FF5722;
            color: white;
            border: none;
            cursor: pointer;
            font-size: 16px;
            border-radius: 5px;
        }

        .btn-payment:hover {
            background-color: #e64a19;
        }
    </style>
</head>
<body>

    <h2>Chọn Ghế</h2>
    <div class="screen">Màn Hình</div>
    <p><strong>Mã phim:</strong> @ViewBag.MovieId</p>
    <p><strong>Giờ chiếu đã chọn:</strong>
        <ul>
            @foreach (var time in ViewBag.SelectedTimes)
            {
                        <li>@time</li>
            }
        </ul>
    </p>
    <!-- Tạo hàng ghế 7x10 -->
    <div class="seats">
        @for (int i = 0; i < 7; i++)
        {
            @for (int j = 0; j < 10; j++)
            {
                var seatId = "Seat" + (i * 10 + j + 1); 
                        <div class="seat" id="@seatId" onclick="selectSeat('@seatId')">@seatId</div>
            }
        }
    </div>

    <button class="btn-payment" onclick="proceedToPayment()">Thanh Toán</button>

    <script>
        var selectedSeats = [];

        function selectSeat(seatId) {
            var seat = document.getElementById(seatId);
            if (seat.classList.contains('occupied')) {
                return; // Không thể chọn ghế đã đặt
            }

            if (seat.classList.contains('selected')) {
                seat.classList.remove('selected');
                selectedSeats = selectedSeats.filter(id => id !== seatId);
            } else {
                seat.classList.add('selected');
                selectedSeats.push(seatId);
            }
        }

        function proceedToPayment() {
            if (selectedSeats.length === 0) {
                alert("Vui lòng chọn ít nhất một ghế.");
                return;
            }

            // Gửi thông tin về ghế đã chọn, mã phim và giờ chiếu đến server
            fetch('/Home/SaveBookingSession', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': '@Html.AntiForgeryToken()' // Bảo mật CSRF
                },
                body: JSON.stringify({
                    movieId: '@ViewBag.MovieId', // Lấy ID phim từ ViewBag
                    selectedTimes: @Html.Raw(Json.Serialize(ViewBag.SelectedTimes)), // Lấy giờ chiếu từ ViewBag
                    selectedSeats: selectedSeats // Gửi danh sách ghế đã chọn
                })
            }).then(response => {
                if (!response.ok) {
                    throw new Error('Có lỗi xảy ra');
                }
                return response.json();
            }).then(data => {
                alert("Thông tin đã được lưu vào session!");
                window.location.href = "/Home/Payment"; // Chuyển đến trang thanh toán
            }).catch(error => {
                console.error('Error:', error);
                alert("Đã xảy ra lỗi khi lưu thông tin.");
            });
        }
    </script>
</body>
</html>
