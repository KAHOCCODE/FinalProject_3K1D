@model IEnumerable<FinalProject_3K1D.Models.KhuyenMai>

@{
    ViewData["Title"] = "Discounts";
    Layout = null;
}

<head>
    <meta charset='utf-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <title>Discounts - GoSNippets</title>
    <link href='https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        body {
            background: linear-gradient(135deg, #1e1e1e 0%, #333 100%);
            margin-top: 100px; /* Adjust this value according to your navigation bar height */
            color: #fff;
            font-family: Arial, sans-serif;
        }

        .navbar {
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
            background: #222;
            border-bottom: 1px solid #444;
            border-bottom: 4px solid red; /* Red border added */
        }

        .card {
            width: 100%;
            max-width: 350px;
            padding: 20px;
            border-radius: 20px;
            background: linear-gradient(135deg, #DC32CF 0%, #FF6F61 100%);
            border: none;
            color: #fff;
            height: 350px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            margin: 15px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
            transition: transform 0.3s, box-shadow 0.3s, background 0.3s;
        }

            .card:hover {
                transform: translateY(-10px);
                box-shadow: 0 12px 24px rgba(0, 0, 0, 0.4);
                background: linear-gradient(135deg, #FF6F61 0%, #DC32CF 100%);
            }

        .containers {
            margin-top: 40px; /* Adjust this value as needed */
            padding: 20px;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        .card h1 {
            font-size: 26px;
            margin-bottom: 10px;
            font-weight: bold;
        }

        .card span {
            font-size: 16px;
            margin-bottom: 10px;
        }

        .card .btn {
            background-color: #fff;
            color: #DC32CF;
            border: none;
            border-radius: 10px;
            padding: 12px 25px;
            font-size: 16px;
            text-transform: uppercase;
            font-weight: bold;
            transition: background-color 0.3s, color 0.3s, background 0.3s;
            background: #fff; /* Ensure default background is white */
        }

            .card .btn:hover {
                background: linear-gradient(135deg, #FF7E00 0%, #FF6F00 100%);
                color: #fff;
            }

        .image {
            position: absolute;
            opacity: 0.1;
            left: 20px;
            top: 20px;
        }

        .image2 {
            position: absolute;
            bottom: 20px;
            right: 20px;
            opacity: 0.1;
        }
    </style>
</head>

<body oncontextmenu='return false' class='snippet-body'>
    @Html.Partial("_Navbar")

    <div class="containers">
        @foreach (var discount in Model)
        {
            <div class="card text-center">
                <div class="image"><img src="https://i.imgur.com/DC94rZe.png" width="150"></div>
                <div class="image2"><img src="https://i.imgur.com/DC94rZe.png" width="150"></div>
                <h1>@discount.TenKhuyenMai</h1>
                <span class="d-block">Value: @discount.GiaTri.ToString("C")</span>
                <span class="d-block">Start: @discount.NgayBatDau.ToShortDateString()</span>
                <span class="d-block">End: @discount.NgayKetThuc.ToShortDateString()</span>
                <div class="mt-3">
                    <a href="@Url.Action("Claim", "GiamGia", new { id = discount.IdKhuyenMai })" class="btn">Claim</a>
                </div>
            </div>
        }
    </div>
</body>
