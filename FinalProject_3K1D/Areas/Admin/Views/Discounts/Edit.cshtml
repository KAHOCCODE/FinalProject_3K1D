@model FinalProject_3K1D.Models.KhuyenMai
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Edit Discount";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Edit Discount</h1>

<h4>KhuyenMai</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <input type="hidden" asp-for="IdKhuyenMai" />
            <div class="form-group">
                <label asp-for="TenKhuyenMai" class="control-label"></label>
                <input asp-for="TenKhuyenMai" class="form-control" />
