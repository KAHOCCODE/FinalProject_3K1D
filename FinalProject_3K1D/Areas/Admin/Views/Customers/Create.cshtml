@model FinalProject_3K1D.Models.KhachHang
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Tạo Khách Hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center mb-4" style="color: #4B0082; font-weight: bold; font-size: 2.5rem;">@ViewData["Title"]</h1>

    <div class="card border-0 shadow-lg rounded-3">
        <div class="card-header" style="background-color: #4B0082; color: #fff;">
            <h4 class="mb-0 text-center">Tạo Khách Hàng Mới</h4>
        </div>
        <div class="card-body p-4">
            <form id="createForm" asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="IdKhachHang" class="form-control form-control-lg border-warning" id="floatingIdKhachHang" placeholder="ID" readonly value="@Model.IdKhachHang" />
                            <label for="floatingIdKhachHang">Mã Khách Hàng</label>
                            <div class="form-text text-danger">
                                <span asp-validation-for="IdKhachHang"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="HoTen" class="form-control form-control-lg border-warning" id="floatingHoTen" placeholder="Full Name" />
                            <label for="floatingHoTen">Họ Tên</label>
                            <div class="form-text text-danger">
                                <span asp-validation-for="HoTen"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="NgaySinh" type="date" class="form-control form-control-lg border-warning" id="floatingNgaySinh" />
                            <label for="floatingNgaySinh">Ngày Sinh</label>
                            <div class="form-text text-danger">
                                <span asp-validation-for="NgaySinh"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="DiaChi" class="form-control form-control-lg border-warning" id="floatingDiaChi" placeholder="Address" />
                            <label for="floatingDiaChi">Địa Chỉ</label>
                            <div class="form-text text-danger">
                                <span asp-validation-for="DiaChi"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Sdt" class="form-control form-control-lg border-warning" id="floatingSdt" placeholder="Phone Number" />
                            <label for="floatingSdt">Số Điện Thoại</label>
                            <div class="form-text text-danger">
                                <span asp-validation-for="Sdt"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Cccd" class="form-control form-control-lg border-warning" id="floatingCccd" placeholder="CCCD" />
                            <label for="floatingCccd">CCCD</label>
                            <div class="form-text text-danger">
                                <span asp-validation-for="Cccd"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control form-control-lg border-warning" id="floatingEmail" placeholder="Email" />
                            <label for="floatingEmail">Email</label>
                            <div class="form-text text-danger">
                                <span asp-validation-for="Email"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="UserKh" class="form-control form-control-lg border-warning" id="floatingUserKh" placeholder="Username" />
                            <label for="floatingUserKh">Username</label>
                            <div class="form-text text-danger">
                                <span asp-validation-for="UserKh"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="PassKh" type="password" class="form-control form-control-lg border-warning" id="floatingPassKh" placeholder="Password" />
                            <label for="floatingPassKh">Password</label>
                            <div class="form-text text-danger">
                                <span asp-validation-for="PassKh"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-center mt-4">
                    <button id="createButton" type="submit" class="btn btn-lg" style="background-color: #4B0082; color: white;">Create</button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- SweetAlert2 JS -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.getElementById('createButton').addEventListener('click', function (event) {
        event.preventDefault(); // Prevent the default form submission

        const form = document.getElementById('createForm');
        const formData = new FormData(form);

        // Example validation: Check if all fields are filled (customize as needed)
        let isValid = true;
        formData.forEach((value, key) => {
            if (!value) {
                isValid = false;
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Please fill out all fields.'
                });
            }
        });

        if (isValid) {
            // Simulate successful submission
            Swal.fire({
                icon: 'success',
                title: 'Success',
                text: 'Customer created successfully!'
            }).then(() => {
                form.submit(); // Submit the form after showing the success message
            });
        }
    });
</script>

<!-- CSS tùy chỉnh -->
<style>
    .form-control-lg {
        border-radius: 10px;
        box-shadow: inset 0 1px 2px rgba(0,0,0,0.1);
    }

    .btn-lg {
        border-radius: 20px;
        font-weight: bold;
    }

    .btn-primary {
        background-color: #4B0082;
        border-color: #4B0082;
    }

        .btn-primary:hover {
            background-color: #6A0DAD;
            border-color: #6A0DAD;
        }

    .btn-secondary {
        background-color: #6C757D;
        border-color: #6C757D;
    }

        .btn-secondary:hover {
            background-color: #5A6268;
            border-color: #5A6268;
        }
</style>
