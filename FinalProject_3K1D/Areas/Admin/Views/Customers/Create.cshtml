@model FinalProject_3K1D.Models.KhachHang
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var nextId = ViewData["NextId"] as string;
}

<div class="container mt-4">
    @* <h1 class="mb-4 text-center text-primary">@ViewData["Title"]</h1> *@

    <div class="card border-0 shadow-lg rounded-3">
        <div class="card-header" style="background-color: #b66dff; color: white;">
            <h4 class="mb-0 text-center">Create New KhachHang</h4>
        </div>
        <div class="card-body p-4">
            <form id="createForm" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="IdKhachHang" class="form-control border-primary" id="floatingIdKhachHang" placeholder="ID" readonly value="@nextId" />
                            <label for="floatingIdKhachHang">Mã Khách Hàng</label>
                            <div class="form-text text-danger">
                                <span asp-validation-for="IdKhachHang"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="HoTen" class="form-control border-primary" id="floatingHoTen" placeholder="Full Name" />
                            <label for="floatingHoTen">Họ Tên</label>
                            <div class="form-text text-danger">
                                <span asp-validation-for="HoTen"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="NgaySinh" type="date" class="form-control border-primary" id="floatingNgaySinh" />
                            <label for="floatingNgaySinh">Ngày Sinh</label>
                            <div class="form-text text-danger">
                                <span asp-validation-for="NgaySinh"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="DiaChi" class="form-control border-primary" id="floatingDiaChi" placeholder="Address" />
                            <label for="floatingDiaChi">Địa Chỉ</label>
                            <div class="form-text text-danger">
                                <span asp-validation-for="DiaChi"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Sdt" class="form-control border-primary" id="floatingSdt" placeholder="Phone Number" />
                            <label for="floatingSdt">Số Điện Thoại</label>
                            <div class="form-text text-danger">
                                <span asp-validation-for="Sdt"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Cccd" class="form-control border-primary" id="floatingCccd" placeholder="ID Card Number" />
                            <label for="floatingCccd">CCCD</label>
                            <div class="form-text text-danger">
                                <span asp-validation-for="Cccd"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="DienTichLuy" class="form-control border-primary" id="floatingDienTichLuy" placeholder="Area" readonly value="0" />
                            <label for="floatingDienTichLuy">Điểm Tích Lũy</label>
                            <div class="form-text text-danger">
                                <span asp-validation-for="DienTichLuy"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Email" type="email" class="form-control border-primary" id="floatingEmail" placeholder="Email" />
                            <label for="floatingEmail">Email</label>
                            <div class="form-text text-danger">
                                <span asp-validation-for="Email"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="UserKh" class="form-control border-primary" id="floatingUserKh" placeholder="Username" />
                            <label for="floatingUserKh">Username</label>
                            <div class="form-text text-danger">
                                <span asp-validation-for="UserKh"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="PassKh" type="password" class="form-control border-primary" id="floatingPassKh" placeholder="Password" />
                            <label for="floatingPassKh">Password</label>
                            <div class="form-text text-danger">
                                <span asp-validation-for="PassKh"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-center mt-4">
                    <button type="submit" class="btn" style="background-color: #b66dff; color: white;">Create</button>
                    <a class="btn btn-secondary ms-3" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- SweetAlert2 JS -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.getElementById('createButton').addEventListener('click', function (event) {
        event.preventDefault(); // Prevent the default form submission

        const form = document.getElementById('createForm');
        const formData = new FormData(form);

        // Example validation: Check if all fields are filled (customize as needed)
        let isValid = true;
        formData.forEach((value, key) => {
            if (!value) {
                isValid = false;
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Please fill out all fields.'
                });
            }
        });

        if (isValid) {
            // Submit the form if valid (or simulate a successful submission)
            Swal.fire({
                icon: 'success',
                title: 'Success',
                text: 'Customer created successfully!'
            }).then(() => {
                form.submit(); // Submit the form after showing the success message
            });
        }
    });
</script>
