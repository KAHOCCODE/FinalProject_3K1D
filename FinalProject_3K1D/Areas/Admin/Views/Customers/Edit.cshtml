@model FinalProject_3K1D.Models.KhachHang
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Chỉnh Sửa Khách Hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center mb-4" style="color: #4B0082; font-weight: bold; font-size: 2.5rem;">@ViewData["Title"]</h1>

    <div class="card border-0 shadow-lg rounded-3">
        <div class="card-header" style="background-color: #4B0082; color: #fff;">
            <h4 class="mb-0 text-center">Chỉnh Sửa Khách Hàng</h4>
        </div>
        <div class="card-body p-4">
            <form id="editForm" asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="IdKhachHang" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="HoTen" class="form-control form-control-lg" id="floatingHoTen" placeholder="Họ Tên" />
                            <label for="floatingHoTen">Họ Tên</label>
                            <span asp-validation-for="HoTen" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="NgaySinh" type="date" class="form-control form-control-lg" id="floatingNgaySinh" />
                            <label for="floatingNgaySinh">Ngày Sinh</label>
                            <span asp-validation-for="NgaySinh" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="DiaChi" class="form-control form-control-lg" id="floatingDiaChi" placeholder="Địa Chỉ" />
                            <label for="floatingDiaChi">Địa Chỉ</label>
                            <span asp-validation-for="DiaChi" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Sdt" class="form-control form-control-lg" id="floatingSdt" placeholder="Số Điện Thoại" />
                            <label for="floatingSdt">Số Điện Thoại</label>
                            <span asp-validation-for="Sdt" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Cccd" class="form-control form-control-lg" id="floatingCccd" placeholder="Số CCCD" />
                            <label for="floatingCccd">CCCD</label>
                            <span asp-validation-for="Cccd" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="DienTichLuy" class="form-control form-control-lg" id="floatingDienTichLuy" placeholder="Điểm Tích Lũy" readonly />
                            <label for="floatingDienTichLuy">Điểm Tích Lũy</label>
                            <span asp-validation-for="DienTichLuy" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Email" type="email" class="form-control form-control-lg" id="floatingEmail" placeholder="Email" />
                            <label for="floatingEmail">Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="UserKh" class="form-control form-control-lg" id="floatingUserKh" placeholder="Username" />
                            <label for="floatingUserKh">Username</label>
                            <span asp-validation-for="UserKh" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="PassKh" type="password" class="form-control form-control-lg" id="floatingPassKh" placeholder="Password" />
                            <label for="floatingPassKh">Password</label>
                            <span asp-validation-for="PassKh" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg me-2">Lưu</button>
                    <a class="btn btn-secondary btn-lg" asp-action="Index">Quay Lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- SweetAlert2 JS -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.getElementById('editButton')?.addEventListener('click', function (event) {
        event.preventDefault(); // Prevent the default form submission

        const form = document.getElementById('editForm');
        const formData = new FormData(form);

        // Example validation: Check if all fields are filled (customize as needed)
        let isValid = true;
        formData.forEach((value, key) => {
            if (!value) {
                isValid = false;
                Swal.fire({
                    icon: 'error',
                    title: 'Lỗi',
                    text: 'Vui lòng điền đầy đủ thông tin.'
                });
            }
        });

        if (isValid) {
            // Simulate successful submission
            Swal.fire({
                icon: 'success',
                title: 'Thành Công',
                text: 'Khách hàng đã được chỉnh sửa thành công!'
            }).then(() => {
                form.submit(); // Submit the form after showing the success message
            });
        }
    });
</script>

<!-- CSS tùy chỉnh -->
<style>
    .form-control-lg {
        border-radius: 10px;
        box-shadow: inset 0 1px 2px rgba(0,0,0,0.1);
    }

    .btn-primary {
        background-color: #4B0082;
        border-color: #4B0082;
        border-radius: 20px;
        font-weight: bold;
    }

        .btn-primary:hover {
            background-color: #6A0DAD;
            border-color: #6A0DAD;
        }

    .btn-secondary {
        background-color: #6C757D;
        border-color: #6C757D;
        border-radius: 20px;
        font-weight: bold;
    }

        .btn-secondary:hover {
            background-color: #5A6268;
            border-color: #5A6268;
        }

    .card-header {
        background-color: #4B0082;
        color: #fff;
    }
</style>
