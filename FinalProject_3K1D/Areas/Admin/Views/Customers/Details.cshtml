@model FinalProject_3K1D.Models.KhachHang
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="mb-0">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <h5 class="text-muted">Họ Tên</h5>
                        </div>
                        <div class="col-md-8">
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.HoTen)</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <h5 class="text-muted">Ngày Sinh</h5>
                        </div>
                        <div class="col-md-8">
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.NgaySinh)</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <h5 class="text-muted">Địa Chỉ</h5>
                        </div>
                        <div class="col-md-8">
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.DiaChi)</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <h5 class="text-muted">Số Điện Thoại</h5>
                        </div>
                        <div class="col-md-8">
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.Sdt)</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <h5 class="text-muted">CCCD</h5>
                        </div>
                        <div class="col-md-8">
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.Cccd)</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <h5 class="text-muted">Điểm Tích Lũy</h5>
                        </div>
                        <div class="col-md-8">
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.DienTichLuy)</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <h5 class="text-muted">Email</h5>
                        </div>
                        <div class="col-md-8">
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.Email)</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <h5 class="text-muted">Username</h5>
                        </div>
                        <div class="col-md-8">
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.UserKh)</p>
                        </div>
                    </div>
                   
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Edit" asp-route-id="@Model?.IdKhachHang" class="btn btn-primary me-2">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Optional: Include Bootstrap Icons for better button visuals -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<script>
    document.getElementById('togglePassword').addEventListener('click', function () {
        var passwordField = document.getElementById('passwordField');
        var icon = this.querySelector('i');
        var button = this;

        if (passwordField.type === 'password') {
            passwordField.type = 'text';
            icon.classList.remove('bi-eye');
            icon.classList.add('bi-eye-slash');
            button.classList.remove('btn-outline-danger');
            button.classList.add('btn-outline-success');
        } else {
            passwordField.type = 'password';
            icon.classList.remove('bi-eye-slash');
            icon.classList.add('bi-eye');
            button.classList.remove('btn-outline-success');
            button.classList.add('btn-outline-danger');
        }
    });
</script>
