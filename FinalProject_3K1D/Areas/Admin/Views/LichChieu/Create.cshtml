
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
        body {
            background: linear-gradient(to right, #ff7e5f, #feb47b); /* Gradient nền cho trang */
            font-family: 'Poppins', sans-serif;
        }


        .movie-detail-page {
            padding: 30px;
            background: linear-gradient(to right, #ffffff, #b3e5fc); /* Gradient trắng và xanh bạc */
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            margin: 20px auto;
            max-width: 1200px;
        }

        .movie-header {
            display: flex;
            align-items: flex-start;
            margin-bottom: 30px;
        }

        .movie-poster {
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
            width: 100%;
            max-width: 300px; /* Điều chỉnh kích thước tối đa */
            height: auto; /* Giữ tỷ lệ hình ảnh */
            margin-right: 20px; /* Khoảng cách giữa poster và thông tin phim */
        }

        .movie-info {
            flex: 1; /* Cho phép phần thông tin phim mở rộng để chiếm không gian còn lại */
            margin-left: 20px; /* Khoảng cách giữa poster và thông tin phim */
        }

            .movie-info h1 {
                margin-bottom: 10px;
                font-size: 2.5rem;
                color: #333;
                background: linear-gradient(to right, #ff5722, #ff9800); /* Gradient cho tiêu đề */
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                font-weight: bold; /* Thêm thuộc tính in đậm */
                padding: 5px 0;
            }


            .movie-info p {
                font-size: 1.1rem;
                color: #555;
            }

        .movie-description {
            margin-bottom: 30px;
        }

            .movie-description h2 {
                font-size: 2rem;
                color: #fff;
                background: linear-gradient(to right, #ff5722, #ff9800); /* Gradient cho tiêu đề mô tả */
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                border-bottom: 2px solid transparent;
                padding-bottom: 10px;
                margin-bottom: 15px;
                font-weight: bold; /* Thêm thuộc tính in đậm */
            }

            .movie-description p {
                font-size: 1.2rem;
                line-height: 1.6;
                color: #666;
            }

        .booking-section {
            margin-top: 50px; /* Điều chỉnh khoảng cách với nội dung phía trên */
        }

            .booking-section h2 {
                font-size: 1.8rem;
                color: #fff;
                background: linear-gradient(to right, #ff5722, #ff9800); /* Gradient cho tiêu đề đặt vé */
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                margin-bottom: 15px;
                font-weight: bold; /* Thêm thuộc tính in đậm */
            }

            .booking-section p {
                font-size: 1.1rem;
                color: #555;
            }

        .btn-book {
            background: linear-gradient(to right, #ff5722, #ff9800); /* Gradient cho nút đặt vé */
            color: white;
            border: none;
            padding: 12px 20px;
            text-transform: uppercase;
            font-weight: bold;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .btn-book:hover {
                background: linear-gradient(to right, #ab47bc, #8e24aa); /* Gradient khi hover */
            }

        .date-buttons, .time-buttons {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
        }

        .btn-date, .btn-time {
            background: #ff5722;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s;
        }

    </style>
<h1>Tạo lịch chiếu</h1>


<div style="overflow-x: auto;">
    <table class="table table-striped">
        <tbody>
           <body>
            <div class="container movie-detail-page">
                <div class="movie-header">
                            @if (@Model != null)
                            {
                <img src="~/images/@Model.ApPhich" alt="@Model.ApPhich" class="movie-poster">
                            }
                        <!-- Phần Thông Tin Phim -->
                        <div class="movie-info">
                            <h1>@Model.TenPhim</h1>
                            <p><i class="fas fa-film"></i> <strong>Thể loại:</strong> @Model.TenTheoLoai</p>
                            <p><i class="fas fa-user-tie"></i> <strong>Đạo diễn:</strong> @Model.DaoDien</p>
                            <p><i class="fas fa-flag"></i> <strong>Quốc gia:</strong> @Model.QuocGiaSanXuat</p>
                            <p><i class="fas fa-clock"></i> <strong>Thời lượng:</strong> @Model.ThoiLuong</p>
                            <p><i class="fas fa-calendar-day"></i> <strong>Khởi chiếu:</strong>@Model.NgayKhoiChieu</p>
                            @foreach (var phim in ViewBag.Phims)
                        {
                                <p><i class="fas fa-film"></i> <strong>Giờ chiếu:</strong>@phim.GioChieu</p>
                                <p><i class="fas fa-film"></i> <strong>Phòng chiếu:</strong>@phim.TenPhong</p>  
                        }
                             <div class="form-group">
                                <label for="gioChieu">Giờ chiếu:</label>
                                <input type="text" class="form-control" id="gioChieu" name="gioChieu">
                            </div>
                            <div class="form-group">
                                <label for="phongChieu">Phòng chiếu:</label>
                                <input type="text" class="form-control" id="phongChieu" name="phongChieu">
                            </div>
                                <button type="submit" class="btn btn-primary">Đặt vé</button>
                        </div>
                    </div>
               </div>
             </body>
        </tbody>
    </table>
</div>


