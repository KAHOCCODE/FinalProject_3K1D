@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
        body {
            background: linear-gradient(to right, #ff7e5f, #feb47b); /* Gradient nền cho trang */
            font-family: 'Poppins', sans-serif;
        }


        .movie-detail-page {
            padding: 30px;
            background: linear-gradient(to right, #ffffff, #b3e5fc); /* Gradient trắng và xanh bạc */
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            margin: 20px auto;
            max-width: 1200px;
        }

        .movie-header {
            display: flex;
            align-items: flex-start;
            margin-bottom: 30px;
        }

        .movie-poster {
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
            width: 100%;
            max-width: 300px; /* Điều chỉnh kích thước tối đa */
            height: auto; /* Giữ tỷ lệ hình ảnh */
            margin-right: 20px; /* Khoảng cách giữa poster và thông tin phim */
        }

        .movie-info {
            flex: 1; /* Cho phép phần thông tin phim mở rộng để chiếm không gian còn lại */
            margin-left: 20px; /* Khoảng cách giữa poster và thông tin phim */
        }

            .movie-info h1 {
                margin-bottom: 10px;
                font-size: 2.5rem;
                color: #333;
                background: linear-gradient(to right, #ff5722, #ff9800); /* Gradient cho tiêu đề */
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                font-weight: bold; /* Thêm thuộc tính in đậm */
                padding: 5px 0;
            }


            .movie-info p {
                font-size: 1.1rem;
                color: #555;
            }

        .movie-description {
            margin-bottom: 30px;
        }

            .movie-description h2 {
                font-size: 2rem;
                color: #fff;
                background: linear-gradient(to right, #ff5722, #ff9800); /* Gradient cho tiêu đề mô tả */
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                border-bottom: 2px solid transparent;
                padding-bottom: 10px;
                margin-bottom: 15px;
                font-weight: bold; /* Thêm thuộc tính in đậm */
            }

            .movie-description p {
                font-size: 1.2rem;
                line-height: 1.6;
                color: #666;
            }

        .booking-section {
            margin-top: 50px; /* Điều chỉnh khoảng cách với nội dung phía trên */
        }

            .booking-section h2 {
                font-size: 1.8rem;
                color: #fff;
                background: linear-gradient(to right, #ff5722, #ff9800); /* Gradient cho tiêu đề đặt vé */
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                margin-bottom: 15px;
                font-weight: bold; /* Thêm thuộc tính in đậm */
            }

            .booking-section p {
                font-size: 1.1rem;
                color: #555;
            }

        .btn-book {
            background: linear-gradient(to right, #ff5722, #ff9800); /* Gradient cho nút đặt vé */
            color: white;
            border: none;
            padding: 12px 20px;
            text-transform: uppercase;
            font-weight: bold;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .btn-book:hover {
                background: linear-gradient(to right, #ab47bc, #8e24aa); /* Gradient khi hover */
            }

        .date-buttons, .time-buttons {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
        }

        .btn-date, .btn-time {
            background: #ff5722;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s;
        }

    </style>
<h1>Tạo lịch chiếu</h1>


<div style="overflow-x: auto;">
    <table class="table table-striped">

        <form asp-action="Create" method="post">
            <div class="form-group">
                <label for="IdPhim">Tên Phim</label>
                <select id="IdPhim" name="IdPhim" class="form-control" asp-items="ViewData["IdPhim"]">
            <option value="">Chọn phim</option>
                </select>
            </div>

            <div class="form-group">
                <label for="IdPhongChieu">Phòng Chiếu</label>
                <select id="IdPhongChieu" name="IdPhongChieu" class="form-control" asp-items="ViewData["IdPhongChieu"]">

            <option value="">Chọn phòng</option>
                 </select>
            </div>

            <div class="form-group">
                <label for="GioChieu">Giờ Chiếu</label>
                <input type="time" id="GioChieu" name="GioChieu" class="form-control" />
            </div>

            <div class="form-group">
                <label for="GiaVe">Giá Vé</label>
                <input type="number" id="GiaVe" name="GiaVe" class="form-control" />
            </div>

            <div class="form-group">
                <label for="TrangThai">Trạng Thái</label>
                <select id="TrangThai" name="TrangThai" class="form-control">
                    <option value="1">Đang chiếu</option>
                    <option value="0">Ngừng chiếu</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Tạo Lịch Chiếu</button>
        </form>
    </table>
</div>


