@model FinalProject_3K1D.ViewModels.ThanhToanViewModel

@{
    ViewBag.Title = "Thông Tin Thanh Toán";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thông Tin Thanh Toán</h2>

<div class="card shadow-lg border-0 rounded-3 p-4">
    <div class="row mb-3">
        <div class="col-md-6">
            <strong>Id Vé:</strong> @Model.IdVe
        </div>
        <div class="col-md-6">
            <strong>Ngày Mua:</strong> @Model.NgayMua.ToString("dd/MM/yyyy")
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <strong>Tên Khách Hàng:</strong> @Model.TenKhachHang
        </div>
        <div class="col-md-6">
            <strong>Số Điện Thoại:</strong> @Model.SoDienThoai
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <strong>Tên Phim:</strong> @Model.TenPhim
        </div>
        <div class="col-md-6">
            <strong>Mã Ghế:</strong> @Model.MaGhe
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <strong>Tên Rạp:</strong> @Model.TenRap
        </div>
        <div class="col-md-6">
            <strong>Giờ Chiếu:</strong> @Model.GioChieu.ToString("HH:mm")
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <strong>Tên Phòng:</strong> @Model.TenPhong
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <strong>Tiền Bán Vé:</strong> @Model.TienBanVe.ToString("C")
        </div>
    </div>
</div>
