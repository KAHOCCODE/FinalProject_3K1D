@model FinalProject_3K1D.Models.LichChieu
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Lịch Chiếu Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <div class="card border-0 shadow-lg rounded-4">
        <div class="card-header bg-primary text-white text-center">
            <h4 class="mb-0">Chi Tiết Lịch Chiếu</h4>
        </div>
        <div class="card-body p-4">
            <dl class="row">
                <dt class="col-sm-4 fw-bold">Mã Lịch Chiếu</dt>
                <dd class="col-sm-8">@Model.IdLichChieu</dd>

                <dt class="col-sm-4 fw-bold">Tên Phim</dt>
                <dd class="col-sm-8">@Model.IdPhimNavigation.TenPhim</dd>

                <dt class="col-sm-4 fw-bold">Giờ Chiếu</dt>
                <dd class="col-sm-8">@Model.GioChieu.ToString("g")</dd>

                <dt class="col-sm-4 fw-bold">Rạp</dt>
                <dd class="col-sm-8">@Model.IdPhongChieuNavigation.IdRapNavigation.TenRap</dd>

                <dt class="col-sm-4 fw-bold">Phòng Chiếu</dt>
                <dd class="col-sm-8">@Model.IdPhongChieuNavigation.TenPhong</dd>

                <dt class="col-sm-4 fw-bold">Giá Vé</dt>
                <dd class="col-sm-8">@Model.GiaVe.ToString("C0")</dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Index" class="btn btn-secondary me-2">
                <i class="fas fa-arrow-left"></i> Quay Lại
            </a>
            <a asp-action="Edit" asp-route-id="@Model.IdLichChieu" class="btn btn-primary">
                <i class="fas fa-edit"></i> Chỉnh Sửa
            </a>
        </div>
    </div>
</div>

<!-- Font Awesome for icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
