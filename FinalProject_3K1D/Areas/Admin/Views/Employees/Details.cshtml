@model FinalProject_3K1D.Models.NhanVien
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Employee Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <div class="card border-0 shadow-lg rounded-4">
        <div class="card-header bg-gradient text-white">
            <h4 class="mb-0">Employee Details</h4>
        </div>
        <div class="card-body bg-light">
            <div class="row">
                <!-- Profile Picture -->
                <div class="col-md-4 text-center mb-4">
                    @if (Model.HinhAnh != null)
                    {
                        <img src="~/image/AnhNhanVien/@Model.HinhAnh" alt="Profile Picture" class="img-fluid rounded-circle border border-info" style="max-width: 150px;" />
                    }
                    else
                    {
                        <div class="p-4 border border-secondary rounded bg-warning text-center text-dark">
                            <span class="fw-bold">No image available</span>
                        </div>
                    }
                </div>

                <!-- Details -->
                <div class="col-md-8">
                    <dl class="row">
                        <!-- Full Name -->
                        <dt class="col-sm-4 fw-bold text-primary">
                            @Html.DisplayNameFor(model => model.HoTen)
                        </dt>
                        <dd class="col-sm-8 text-success">
                            @Html.DisplayFor(model => model.HoTen)
                        </dd>

                        <!-- Date of Birth -->
                        <dt class="col-sm-4 fw-bold text-primary">
                            @Html.DisplayNameFor(model => model.NgaySinh)
                        </dt>
                        <dd class="col-sm-8 text-success">
                            @(((DateTime)Model.NgaySinh).ToString("dd/MM/yyyy"))
                        </dd>

                        <!-- Address -->
                        <dt class="col-sm-4 fw-bold text-primary">
                            @Html.DisplayNameFor(model => model.DiaChi)
                        </dt>
                        <dd class="col-sm-8 text-success">
                            @Html.DisplayFor(model => model.DiaChi)
                        </dd>

                        <!-- Phone Number -->
                        <dt class="col-sm-4 fw-bold text-primary">
                            @Html.DisplayNameFor(model => model.Sdt)
                        </dt>
                        <dd class="col-sm-8 text-success">
                            @Html.DisplayFor(model => model.Sdt)
                        </dd>

                        <!-- Email -->
                        <dt class="col-sm-4 fw-bold text-primary">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-8 text-success">
                            @Html.DisplayFor(model => model.Email)
                        </dd>

                        <!-- Username -->
                        <dt class="col-sm-4 fw-bold text-primary">
                            @Html.DisplayNameFor(model => model.UserNv)
                        </dt>
                        <dd class="col-sm-8 text-success">
                            @Html.DisplayFor(model => model.UserNv)
                      

                        <!-- Position -->
                        <dt class="col-sm-4 fw-bold text-primary">
                            @Html.DisplayNameFor(model => model.IdChucVuNavigation)
                        </dt>
                        <dd class="col-sm-8 text-success">
                            @Html.DisplayFor(model => model.IdChucVuNavigation.TenChucVu)
                        </dd>

                        <!-- Theater -->
                        <dt class="col-sm-4 fw-bold text-primary">
                            @Html.DisplayNameFor(model => model.IdRapNavigation)
                        </dt>
                        <dd class="col-sm-8 text-success">
                            @Html.DisplayFor(model => model.IdRapNavigation.TenRap)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer bg-gradient text-center">
            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.IdNhanVien">Edit</a>
            <a class="btn btn-secondary ms-3" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const togglePassword = document.getElementById('togglePassword');
            const passwordField = document.getElementById('passwordField');

            togglePassword.addEventListener('click', function (e) {
                // Toggle the type attribute
                const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
                passwordField.setAttribute('type', type);

                // Toggle the eye icon
                this.innerHTML = type === 'password' ? '<i class="bi bi-eye"></i>' : '<i class="bi bi-eye-slash"></i>';
            });
        });
    </script>

