@model IEnumerable<FinalProject_3K1D.Models.NhanVien>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Danh sách nhân viên";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center text-primary mb-4" style="font-weight: bold;">Danh sách nhân viên</h1>

    <p class="text-end">
        <a class="btn btn-primary btn-lg" asp-action="Create">
            <i class="bi bi-person-plus"></i> Thêm nhân viên mới
        </a>
    </p>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-lg border-0 rounded-3">
                    @if (!string.IsNullOrEmpty(item.HinhAnh))
                    {
                        <img src="~/image/AnhNhanVien/@item.HinhAnh" class="card-img-top" alt="Hình ảnh nhân viên" style="height: 200px; object-fit: cover;">
                    }
                    <div class="card-body">
                        <h5 class="card-title text-center text-primary" style="font-weight: bold;">@item.HoTen</h5>
                        <p class="card-text">
                            <strong>Ngày sinh:</strong> @item.NgaySinh?.ToString("dd/MM/yyyy")<br>
                            <strong>Địa chỉ:</strong> @item.DiaChi<br>
                            <strong>Số điện thoại:</strong> @item.Sdt<br>
                            <strong>Email:</strong> @item.Email
                        </p>
                        <div class="d-flex justify-content-between">
                            <a class="btn btn-warning btn-sm text-white" asp-action="Edit" asp-route-id="@item.IdNhanVien">
                                <i class="bi bi-pencil"></i> Sửa
                            </a>
                            <a class="btn btn-info btn-sm text-white" asp-action="Details" asp-route-id="@item.IdNhanVien">
                                <i class="bi bi-info-circle"></i> Chi tiết
                            </a>
                            <a class="btn btn-danger btn-sm text-white" asp-action="Delete" asp-route-id="@item.IdNhanVien">
                                <i class="bi bi-trash"></i> Xóa
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Font Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" rel="stylesheet">

<!-- Custom CSS -->
<style>
    .card {
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

    .btn-primary {
        background-color: #4B0082;
        border: none;
        transition: background-color 0.3s, transform 0.3s;
    }

        .btn-primary:hover {
            background-color: #6A0DAD;
            transform: scale(1.05);
        }
</style>
