@model IEnumerable<FinalProject_3K1D.Models.NhanVien>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Employee Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center">Employee List</h1>

    <p class="text-end">
        <a class="btn btn-primary btn-lg" asp-action="Create">Add New Employee</a>
    </p>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-lg border-light">
                    @if (!string.IsNullOrEmpty(item.HinhAnh))
                    {
                        <img src="~/image/AnhNhanVien/@item.HinhAnh" class="card-img-top" alt="Employee Image" style="height: 200px; object-fit: sca;">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@item.HoTen</h5>
                        <p class="card-text">
                            <strong>Date of Birth:</strong> @item.NgaySinh?.ToString("dd/MM/yyyy")<br>
                            <strong>Address:</strong> @item.DiaChi<br>
                            <strong>Phone:</strong> @item.Sdt<br>
                            <strong>Email:</strong> @item.Email
                        </p>
                        <div class="d-flex justify-content-between">
                            <a class="btn btn-warning btn-sm text-white" asp-action="Edit" asp-route-id="@item.IdNhanVien">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a class="btn btn-info btn-sm text-white" asp-action="Details" asp-route-id="@item.IdNhanVien">
                                <i class="bi bi-info-circle"></i> Details
                            </a>
                            <a class="btn btn-danger btn-sm text-white" asp-action="Delete" asp-route-id="@item.IdNhanVien">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" rel="stylesheet">

