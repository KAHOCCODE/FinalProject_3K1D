@model IEnumerable<FinalProject_3K1D.Models.NhanVien>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Employee List";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container my-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="d-flex justify-content-end mb-3">
        <a class="btn btn-success" asp-action="Create"><i class="fas fa-plus"></i> Create New</a>
    </div>

    <div class="card border-0 shadow-lg rounded-3">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Employee List</h5>
        </div>
        <div class="card-body p-4">
            <table class="table table-striped table-hover">
                <thead class="table-secondary">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.HinhAnh)</th>
                        <th>@Html.DisplayNameFor(model => model.HoTen)</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th>@Html.DisplayNameFor(model => model.IdChucVuNavigation)</th>
                        <th>@Html.DisplayNameFor(model => model.IdRapNavigation)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(item.HinhAnh))
                                {
                                    <img src="@item.HinhAnh" alt="Image" class="img-thumbnail" style="max-width: 100px; height: auto;" />
                                }
                                else
                                {
                                    <span>No Image</span>
                                }
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.HoTen)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.IdChucVuNavigation.IdChucVu)</td>
                            <td>@Html.DisplayFor(modelItem => item.IdRapNavigation.IdRap)</td>
                            <td>
                                <a class="btn btn-warning btn-sm mx-1" asp-action="Edit" asp-route-id="@item.IdNhanVien"><i class="fas fa-edit"></i> Edit</a>
                                <a class="btn btn-info btn-sm mx-1" asp-action="Details" asp-route-id="@item.IdNhanVien"><i class="fas fa-info-circle"></i> Details</a>
                                <a class="btn btn-danger btn-sm mx-1" asp-action="Delete" asp-route-id="@item.IdNhanVien"><i class="fas fa-trash"></i> Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Font Awesome for icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
