@model FinalProject_3K1D.Models.NhanVien
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <h1 class="mb-4 text-center">Create New Employee</h1>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-light">
                <div class="card-body">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="IdNhanVien" class="form-label">Employee ID</label>
                            <input asp-for="IdNhanVien" class="form-control" readonly />
                            <div class="form-text text-danger"></div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="HoTen" class="form-label">Full Name</label>
                            <input asp-for="HoTen" class="form-control" placeholder="Enter full name" />
                            <div class="form-text text-danger"></div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NgaySinh" class="form-label">Date of Birth</label>
                            <input asp-for="NgaySinh" type="date" class="form-control" />
                            <div class="form-text text-danger"></div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DiaChi" class="form-label">Address</label>
                            <input asp-for="DiaChi" class="form-control" placeholder="Enter address" />
                            <div class="form-text text-danger"></div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Sdt" class="form-label">Phone Number</label>
                            <input asp-for="Sdt" class="form-control" placeholder="Enter phone number" />
                            <div class="form-text text-danger"></div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="HinhAnh" class="form-label">Profile Picture</label>
                            <input asp-for="HinhAnh" type="file" class="form-control" accept="image/*" name="HinhAnhFile" />
                            <div class="form-text text-danger"></div>
                        </div>


                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email Address</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Enter email address" />
                            <div class="form-text text-danger"></div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UserNv" class="form-label">Username</label>
                            <input asp-for="UserNv" class="form-control" placeholder="Enter username" />
                            <div class="form-text text-danger"></div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PassNv" class="form-label">Password</label>
                            <input asp-for="PassNv" type="password" class="form-control" placeholder="Enter password" />
                            <div class="form-text text-danger"></div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IdRap" class="form-label">Theater</label>
                            <select asp-for="IdRap" class="form-select" asp-items="ViewBag.IdRap">
                                <option value="">Select Theater</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IdChucVu" class="form-label">Position</label>
                            <select asp-for="IdChucVu" class="form-select" asp-items="ViewBag.IdChucVu">
                                <option value="">Select Position</option>
                            </select>
                        </div>


                        <div class="d-grid gap-2 mt-4">
                            <input type="submit" value="Create" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a class="btn btn-secondary btn-lg" asp-action="Index">Back to List</a>
    </div>
</div>
