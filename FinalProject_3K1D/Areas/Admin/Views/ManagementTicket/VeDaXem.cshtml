@model IEnumerable<dynamic>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Danh sách vé đã xem";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Tìm kiếm -->
<form method="get" asp-action="VeDaXem" class="d-flex justify-content-center mb-4">
    <div class="input-group" style="max-width: 500px;">
        <input type="text" class="form-control" name="searchString2" placeholder="Tìm kiếm theo tên phim" value="@ViewData["SearchString2"]" />
        <button class="btn btn-primary" type="submit">
            <i class="fas fa-search"></i> Tìm kiếm
        </button>
    </div>
</form>

<!-- Tiêu đề và bảng dữ liệu -->
<div class="container mt-4">
    <h1 class="text-center text-primary mb-4" style="font-weight: bold;">@ViewData["Title"]</h1>

    <div class="card shadow border-0 rounded-3">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-header">
                        <tr>
                            <th class="text-center">ID Vé</th>
                            <th class="text-center">Tên Phim</th>
                            <th class="text-center">Tên Khách Hàng</th>
                            <th class="text-center">Giờ Chiếu</th>
                            <th class="text-center">Mã Ghế Ngồi</th>
                            <th class="text-center">Giá Tiền</th>
                            <th class="text-center">Ngày Mua</th>
                            <th class="text-center">Tên Phòng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ticket in Model)
                        {
                            <tr class="table-row">
                                <td class="align-middle text-center">@ticket.IdVe</td>
                                <td class="align-middle text-center">@ticket.TenPhim</td>
                                <td class="align-middle text-center">@ticket.HoTen</td>
                                <td class="align-middle text-center">@ticket.GioChieu.ToString("HH:mm:ss")</td>
                                <td class="align-middle text-center">@ticket.MaGheNgoi</td>
                                <td class="align-middle text-center">@ticket.TienBanVe.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</td>
                                <td class="align-middle text-center">@ticket.NgayMua?.ToString("dd/MM/yyyy")</td>
                                <td class="align-middle text-center">@ticket.TenPhong</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Font Awesome for icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<!-- Custom CSS -->
<style>
    .table-header {
        background: #4B0082;
        color: #fff;
        font-weight: bold;
    }

    .table-row:hover {
        background: #f2f2f2;
        transition: background 0.3s;
    }

    .btn-primary {
        background-color: #4B0082;
        border: none;
        transition: background-color 0.3s, transform 0.3s;
    }

        .btn-primary:hover {
            background-color: #6A0DAD;
            transform: scale(1.05);
        }
</style>

