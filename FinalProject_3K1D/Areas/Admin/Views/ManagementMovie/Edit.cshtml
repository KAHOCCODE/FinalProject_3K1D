@model FinalProject_3K1D.Models.Phim
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit Movie";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <div class="card border-0 shadow-lg rounded-3">
        <div class="card-header" style="background-color: #fed713; color: black;">
            <h4 class="mb-0 text-center">Edit Movie</h4>
        </div>
        <div class="card-body p-4">
            <form id="editForm" asp-action="Edit" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="IdPhim" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="TenPhim" class="form-control border-warning" id="floatingTenPhim" placeholder="Movie Title" />
                            <label for="floatingTenPhim">Tên Phim</label>
                            <span asp-validation-for="TenPhim" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="form-floating mb-3">
                            <textarea asp-for="MoTa" class="form-control border-warning" id="floatingMoTa" rows="4" placeholder="Description"></textarea>
                            <label for="floatingMoTa">Mô Tả</label>
                            <span asp-validation-for="MoTa" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="ThoiLuong" class="form-control border-warning" id="floatingThoiLuong" placeholder="Duration" />
                            <label for="floatingThoiLuong">Thời Lượng</label>
                            <span asp-validation-for="ThoiLuong" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="NgayKhoiChieu" type="date" class="form-control border-warning" id="floatingNgayKhoiChieu" />
                            <label for="floatingNgayKhoiChieu">Ngày Khởi Chiếu</label>
                            <span asp-validation-for="NgayKhoiChieu" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="NgayKetThuc" type="date" class="form-control border-warning" id="floatingNgayKetThuc" />
                            <label for="floatingNgayKetThuc">Ngày Kết Thúc</label>
                            <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="QuocGiaSanXuat" class="form-control border-warning" id="floatingQuocGiaSanXuat" placeholder="Country of Production" />
                            <label for="floatingQuocGiaSanXuat">Quốc Gia Sản Xuất</label>
                            <span asp-validation-for="QuocGiaSanXuat" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="DaoDien" class="form-control border-warning" id="floatingDaoDien" placeholder="Director" />
                            <label for="floatingDaoDien">Đạo Diễn</label>
                            <span asp-validation-for="DaoDien" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="NamSx" class="form-control border-warning" id="floatingNamSx" placeholder="Year of Production" />
                            <label for="floatingNamSx">Năm SX</label>
                            <span asp-validation-for="NamSx" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="DinhDangPhim" class="form-control border-warning" id="floatingDinhDangPhim" placeholder="Film Format" />
                            <label for="floatingDinhDangPhim">Định Dạng Phim</label>
                            <span asp-validation-for="DinhDangPhim" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="ApPhich" type="file" class="form-control border-warning" id="floatingApPhich" />
                            <label for="floatingApPhich">Áp Phích</label>
                            <span asp-validation-for="ApPhich" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-center mt-4">
                    <button type="submit" class="btn" style="background-color: #fed713; color: black;" id="editButton">Save</button>
                    <a class="btn btn-secondary ms-3" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- JavaScript to auto-expand textarea -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const textarea = document.querySelector('#floatingMoTa');
        if (textarea) {
            textarea.addEventListener('input', function () {
                this.style.height = 'auto';
                this.style.height = (this.scrollHeight) + 'px';
            });
        }
    });
</script>
