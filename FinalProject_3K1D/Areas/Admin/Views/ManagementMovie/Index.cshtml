@model IEnumerable<FinalProject_3K1D.Models.Phim>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Danh sách phim đang được chiếu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center text-primary mb-4">@ViewData["Title"]</h1>

    <div class="d-flex justify-content-end mb-3">
        <a class="btn btn-success" asp-action="Create"><i class="fas fa-plus"></i> Thêm phim mới</a>
    </div>

    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-warning">
                        <tr>
                            <th class="text-center">@Html.DisplayNameFor(model => model.IdPhim)</th>
                            <th class="text-center">@Html.DisplayNameFor(model => model.TenPhim)</th>
                            <th class="text-center">@Html.DisplayNameFor(model => model.MoTa)</th>
                            <th class="text-center">@Html.DisplayNameFor(model => model.ThoiLuong)</th>
                            <th class="text-center">@Html.DisplayNameFor(model => model.NgayKhoiChieu)</th>
                            <th class="text-center">@Html.DisplayNameFor(model => model.NgayKetThuc)</th>
                            <th class="text-center">@Html.DisplayNameFor(model => model.QuocGiaSanXuat)</th>
                            <th class="text-center">@Html.DisplayNameFor(model => model.DaoDien)</th>
                            <th class="text-center">@Html.DisplayNameFor(model => model.NamSx)</th>
                            <th class="text-center">@Html.DisplayNameFor(model => model.DinhDangPhim)</th>
                            <th class="text-center">Áp Phích</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle text-center">@Html.DisplayFor(modelItem => item.IdPhim)</td>
                                <td class="align-middle text-center">@Html.DisplayFor(modelItem => item.TenPhim)</td>
                                <td class="align-middle text-center" style="max-width: 200px; overflow: hidden; text-overflow: ellipsis;">@Html.DisplayFor(modelItem => item.MoTa)</td>
                                <td class="align-middle text-center">@Html.DisplayFor(modelItem => item.ThoiLuong)</td>
                                <td class="align-middle text-center">@item.NgayKhoiChieu.ToShortDateString()</td>
                                <td class="align-middle text-center">@item.NgayKetThuc.ToShortDateString()</td>
                                <td class="align-middle text-center">@Html.DisplayFor(modelItem => item.QuocGiaSanXuat)</td>
                                <td class="align-middle text-center">@Html.DisplayFor(modelItem => item.DaoDien)</td>
                                <td class="align-middle text-center">@Html.DisplayFor(modelItem => item.NamSx)</td>
                                <td class="align-middle text-center">@Html.DisplayFor(modelItem => item.DinhDangPhim)</td>
                                <td class="align-middle text-center">
                                    @if (!string.IsNullOrEmpty(item.ApPhich))
                                    {
                                        <img src="@Url.Content("~/image/ApPhich/" + item.ApPhich)" alt="Poster" style="max-height: 100px; max-width: 100px;" />
                                    }
                                    else
                                    {
                                        <span>Chưa có ảnh</span>
                                    }
                                </td>
                                <td class="align-middle text-center">
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-warning btn-sm mx-1" asp-action="Edit" asp-route-id="@item.IdPhim"><i class="fas fa-edit"></i> Edit</a>
                                        <a class="btn btn-info btn-sm mx-1" asp-action="Detail" asp-route-id="@item.IdPhim"><i class="fas fa-info-circle"></i> Details</a>
                                        <button class="btn btn-danger btn-sm btn-delete mx-1" data-id="@item.IdPhim" data-name="@item.TenPhim"><i class="fas fa-trash"></i> Delete</button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-between mt-4">
    <a class="btn btn-secondary" asp-action="MoviesEnd"><i class="fas fa-film"></i> Xem các phim đã chiếu</a>
    <a class="btn btn-info" asp-action="MoviesUpcoming"><i class="fas fa-calendar-alt"></i> Xem các phim sắp chiếu</a>
</div>

<!-- Font Awesome for icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.querySelectorAll('.btn-delete').forEach(button => {
        button.addEventListener('click', function () {
            const movieId = this.getAttribute('data-id');
            const movieName = this.getAttribute('data-name');

            Swal.fire({
                title: 'Bạn có chắc muốn xóa?',
                text: `Phim "${movieName}" sẽ bị xóa!`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    const form = document.createElement('form');
                    form.method = 'post';
                    form.action = '@Url.Action("Delete", "ManagementMovie")';

                    const input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = 'id';
                    input.value = movieId;

                    form.appendChild(input);
                    document.body.appendChild(form);
                    form.submit();
                }
            });
        });
    });
</script>
