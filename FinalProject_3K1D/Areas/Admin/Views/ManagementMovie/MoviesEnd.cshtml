@model IEnumerable<FinalProject_3K1D.Models.Phim>

@{
    ViewData["Title"] = "MoviesEnd";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Danh sách phim đã hết lịch chiếu</h1>

<div style="overflow-x: auto;">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID Phim</th>
                <th>Tên Phim</th>
                <th>Mô Tả</th>
                <th>Thời Lượng</th>
                <th>Ngày Khởi Chiếu</th>
                <th>Ngày Kết Thúc</th>
                <th>Quốc Gia Sản Xuất</th>
                <th>Đạo Diễn</th>
                <th>Năm SX</th>
                <th>Định Dạng Phim</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.IdPhim</td>
                    <td>@item.TenPhim</td>
                    <td style="max-width: 200px; overflow: hidden; text-overflow: ellipsis;">@item.MoTa</td>
                    <td>@item.ThoiLuong</td>
                    <td>@item.NgayKhoiChieu.ToShortDateString()</td>
                    <td>@item.NgayKetThuc.ToShortDateString()</td>
                    <td>@item.QuocGiaSanXuat</td>
                    <td>@item.DaoDien</td>
                    <td>@item.NamSx</td>
                    <td>@item.DinhDangPhim</td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.IdPhim">Edit</a>
                        <form asp-action="Delete" asp-route-id="@item.IdPhim" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.IdPhim" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="mb-3">
    <a class="btn btn-primary" asp-action="Index">Quay lại</a>
</div>
<!-- SweetAlert2 JS -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.querySelectorAll('form').forEach(form => {
        form.addEventListener('submit', function (event) {
            event.preventDefault(); // Prevent the default form submission

            const form = event.target;
            const movieId = form.querySelector('input[name="id"]').value;

            Swal.fire({
                title: 'Are you sure?',
                text: `Do you really want to delete the movie with ID: "${movieId}"?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit(); // Submit the form if confirmed
                }
            });
        });
    });
</script>
