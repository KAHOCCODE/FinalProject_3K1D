@model FinalProject_3K1D.Models.Phim
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Chi tiết phim";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center mb-4" style="color: #4B0082; font-weight: bold;">Chi tiết phim</h1>
    <hr />

    <div class="row">
        <!-- Áp Phích Phim -->
        <div class="col-md-5 d-flex justify-content-center align-items-center mb-4">
            @if (!string.IsNullOrEmpty(Model.ApPhich))
            {
                <img src="@Url.Content("~/image/ApPhich/" + Model.ApPhich)" alt="Poster" class="img-fluid rounded shadow-sm" style="max-height: 500px; width: auto;" />
            }
            else
            {
                <div class="text-center">
                    <p class="text-muted">Chưa có áp phích</p>
                </div>
            }
        </div>

        <!-- Thông Tin Phim -->
        <div class="col-md-7">
            <div class="card border-0 shadow-sm rounded-3 p-4">
                <dl class="row">
                    <dt class="col-sm-4 text-muted">Tên Phim:</dt>
                    <dd class="col-sm-8">
                        <h2 class="fw-bold text-primary">@Model.TenPhim</h2>
                    </dd>

                    <dt class="col-sm-4 text-muted">Mô Tả:</dt>
                    <dd class="col-sm-8">@Model.MoTa</dd>

                    <dt class="col-sm-4 text-muted">Thời Lượng:</dt>
                    <dd class="col-sm-8">@Model.ThoiLuong phút</dd>

                    <dt class="col-sm-4 text-muted">Ngày Khởi Chiếu:</dt>
                    <dd class="col-sm-8">@Model.NgayKhoiChieu.ToShortDateString()</dd>

                    <dt class="col-sm-4 text-muted">Ngày Kết Thúc:</dt>
                    <dd class="col-sm-8">@Model.NgayKetThuc.ToShortDateString()</dd>

                    <dt class="col-sm-4 text-muted">Quốc Gia Sản Xuất:</dt>
                    <dd class="col-sm-8">@Model.QuocGiaSanXuat</dd>

                    <dt class="col-sm-4 text-muted">Đạo Diễn:</dt>
                    <dd class="col-sm-8">@Model.DaoDien</dd>

                    <dt class="col-sm-4 text-muted">Năm Sản Xuất:</dt>
                    <dd class="col-sm-8">@Model.NamSx</dd>

                    <dt class="col-sm-4 text-muted">Định Dạng Phim:</dt>
                    <dd class="col-sm-8">@Model.DinhDangPhim</dd>
                </dl>
            </div>
        </div>
    </div>

    <!-- Nút Quay Lại -->
    <div class="mt-4 text-center">
        <a asp-action="Index" class="btn btn-primary rounded-pill px-4 py-2"><i class="fas fa-arrow-left"></i> Quay lại danh sách</a>
    </div>
</div>

<!-- Font Awesome for icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<!-- CSS tùy chỉnh -->
<style>
    .btn-primary {
        background-color: #4B0082;
        border-color: #4B0082;
        font-weight: bold;
        transition: background-color 0.3s, border-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #6A0DAD;
            border-color: #6A0DAD;
        }

    .card {
        border-radius: 1rem;
    }

    .card-body dl dt {
        font-weight: bold;
    }

    .card-body dl dd {
        margin-bottom: 1rem;
    }

    .img-fluid {
        max-width: 100%;
        height: auto;
    }

    .rounded {
        border-radius: 0.25rem;
    }

    .shadow-sm {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }
</style>
