@model FinalProject_3K1D.Models.Phim
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Chi tiết phim";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center">Chi tiết phim</h1>
<hr />

<div class="row">
    <div class="col-md-4 d-flex justify-content-center align-items-center p-3">
        @if (!string.IsNullOrEmpty(Model.ApPhich))
        {
            <img src="@Url.Content("~/image/ApPhich/" + Model.ApPhich)" alt="Poster" class="img-fluid" style="max-height: 500px; max-width: 100%;" />
        }
        else
        {
            <p>Chưa có áp phích</p>
        }
    </div>

    <div class="col-md-8 p-3">
        <dl class="row">
            <dt class="col-sm-3">Tên Phim:</dt>
            <dd class="col-sm-9">
                <h2 class="fw-bold">@Model.TenPhim</h2>
            </dd>

            <dt class="col-sm-3">Mô Tả:</dt>
            <dd class="col-sm-9">@Model.MoTa</dd>

            <dt class="col-sm-3">Thời Lượng:</dt>
            <dd class="col-sm-9">@Model.ThoiLuong phút</dd>

            <dt class="col-sm-3">Ngày Khởi Chiếu:</dt>
            <dd class="col-sm-9">@Model.NgayKhoiChieu.ToShortDateString()</dd>

            <dt class="col-sm-3">Ngày Kết Thúc:</dt>
            <dd class="col-sm-9">@Model.NgayKetThuc.ToShortDateString()</dd>

            <dt class="col-sm-3">Quốc Gia Sản Xuất:</dt>
            <dd class="col-sm-9">@Model.QuocGiaSanXuat</dd>

            <dt class="col-sm-3">Đạo Diễn:</dt>
            <dd class="col-sm-9">@Model.DaoDien</dd>

            <dt class="col-sm-3">Năm Sản Xuất:</dt>
            <dd class="col-sm-9">@Model.NamSx</dd>

            <dt class="col-sm-3">Định Dạng Phim:</dt>
            <dd class="col-sm-9">@Model.DinhDangPhim</dd>
        </dl>
    </div>
</div>

<div class="mt-3 text-center">
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>
