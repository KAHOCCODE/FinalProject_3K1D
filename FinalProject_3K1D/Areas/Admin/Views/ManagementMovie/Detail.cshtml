@model FinalProject_3K1D.Models.Phim
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Chi tiết phim";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center">Chi tiết phim</h1>
<hr />

<div class="row">
    <div class="col-md-6 p-3">
        <dl class="row">
            <dt class="col-sm-4">ID Phim:</dt>
            <dd class="col-sm-8">@Model.IdPhim</dd>

            <dt class="col-sm-4">Tên Phim:</dt>
            <dd class="col-sm-8">@Model.TenPhim</dd>

            <dt class="col-sm-4">Mô Tả:</dt>
            <dd class="col-sm-8">@Model.MoTa</dd>

            <dt class="col-sm-4">Thời Lượng:</dt>
            <dd class="col-sm-8">@Model.ThoiLuong phút</dd>

            <dt class="col-sm-4">Ngày Khởi Chiếu:</dt>
            <dd class="col-sm-8">@Model.NgayKhoiChieu.ToShortDateString()</dd>

            <dt class="col-sm-4">Ngày Kết Thúc:</dt>
            <dd class="col-sm-8">@Model.NgayKetThuc.ToShortDateString()</dd>

            <dt class="col-sm-4">Quốc Gia Sản Xuất:</dt>
            <dd class="col-sm-8">@Model.QuocGiaSanXuat</dd>

            <dt class="col-sm-4">Đạo Diễn:</dt>
            <dd class="col-sm-8">@Model.DaoDien</dd>

            <dt class="col-sm-4">Năm Sản Xuất:</dt>
            <dd class="col-sm-8">@Model.NamSx</dd>

            <dt class="col-sm-4">Định Dạng Phim:</dt>
            <dd class="col-sm-8">@Model.DinhDangPhim</dd>
        </dl>
    </div>

    <div class="col-md-6 p-3 d-flex justify-content-center align-items-center">
        @if (!string.IsNullOrEmpty(Model.ApPhich))
        {
            <img src="@Url.Content("~/image/ApPhich/" + Model.ApPhich)" alt="Poster" class="img-fluid" style="max-height: 500px; max-width: 100%;" />
        }
        else
        {
            <p>Chưa có áp phích</p>
        }
    </div>
</div>

<div class="mt-3 text-center">
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>
