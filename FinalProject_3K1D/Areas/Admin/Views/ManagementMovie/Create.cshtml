@model FinalProject_3K1D.Models.Phim
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var nextId = ViewData["NextId"] as string;
}

<h1>Create</h1>

<h4>Phim</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="IdPhim" class="form-label">ID Phim</label>
                <input asp-for="IdPhim" class="form-control" value="@nextId" readonly />
                <span asp-validation-for="IdPhim" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TenPhim" class="form-label">Tên Phim</label>
                <input asp-for="TenPhim" class="form-control" />
                <span asp-validation-for="TenPhim" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MoTa" class="form-label">Mô Tả</label>
                <textarea asp-for="MoTa" class="form-control"></textarea>
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ThoiLuong" class="form-label">Thời Lượng (phút)</label>
                <input asp-for="ThoiLuong" class="form-control" type="number" min="1" />
                <span asp-validation-for="ThoiLuong" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NgayKhoiChieu" class="form-label">Ngày Khởi Chiếu</label>
                <input asp-for="NgayKhoiChieu" class="form-control" type="date" />
                <span asp-validation-for="NgayKhoiChieu" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NgayKetThuc" class="form-label">Ngày Kết Thúc</label>
                <input asp-for="NgayKetThuc" class="form-control" type="date" />
                <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="QuocGiaSanXuat" class="form-label">Quốc Gia Sản Xuất</label>
                <select asp-for="QuocGiaSanXuat" class="form-control">
                    <option value="">Chọn quốc gia...</option>
                    @* Countries will be populated here dynamically *@
                </select>
                <span asp-validation-for="QuocGiaSanXuat" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DaoDien" class="form-label">Đạo Diễn</label>
                <input asp-for="DaoDien" class="form-control" />
                <span asp-validation-for="DaoDien" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NamSx" class="form-label">Năm Sản Xuất</label>
                <input asp-for="NamSx" class="form-control" type="number" min="1900" max="@DateTime.Now.Year" />
                <span asp-validation-for="NamSx" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DinhDangPhim" class="form-label">Định Dạng Phim</label>
                <select asp-for="DinhDangPhim" class="form-control">
                    <option value="2D">2D</option>
                    <option value="3D">3D</option>
                    <option value="IMAX">IMAX</option>
                </select>
                <span asp-validation-for="DinhDangPhim" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ApPhich" class="form-label">Áp Phích</label>
                <input asp-for="ApPhich" class="form-control" type="file" />
                <span asp-validation-for="ApPhich" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>


<!--thông báo sweetAlert2-->
<script>
    document.addEventListener('DOMContentLoaded', function () {
    @if (TempData["SuccessMessage"] != null)
    {
        <text>
                Swal.fire({
                    icon: 'success',
                    title: 'Thành công!',
                    text: '@TempData["SuccessMessage"]',
                    confirmButtonText: 'OK'
                });
        </text>
    }
    else if (TempData["ErrorMessage"] != null)
    {
        <text>
                Swal.fire({
                    icon: 'error',
                    title: 'Lỗi!',
                    text: '@TempData["ErrorMessage"]',
                    confirmButtonText: 'OK'
                });
        </text>
    }
                                        });
</script>
