@model IEnumerable<dynamic>

@{
    var movieName = ViewData["MovieName"] as string;
    var startDate = ViewData["StartDate"] as DateTime?;
    var endDate = ViewData["EndDate"] as DateTime?;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Chi Tiết Doanh Thu: @movieName</h1>

<!-- Go Back Button -->
<a href="javascript:history.back()" class="btn btn-secondary mb-3">Quay về</a>

<form method="get" class="form-inline mb-3">
    <div class="form-group mr-2">
        <label for="startDate" class="mr-2">Ngày Bắt Đầu:</label>
        <input type="date" id="startDate" name="startDate" class="form-control" value="@startDate?.ToString("yyyy-MM-dd")" />
    </div>
    <div class="form-group mr-2">
        <label for="endDate" class="mr-2">Ngày Kết Thúc:</label>
        <input type="date" id="endDate" name="endDate" class="form-control" value="@endDate?.ToString("yyyy-MM-dd")" />
    </div>
    <button type="submit" class="btn btn-primary">Lọc</button>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ngày</th>
            <th>Số Vé Bán</th>
            <th>Doanh Thu Ngày</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Date.ToString("yyyy-MM-dd")</td>
                <td>@item.TicketsSold</td>
                <td>@item.DailyRevenue.ToString("C2")</td>
            </tr>
        }
    </tbody>
</table>

<a href="javascript:history.back()" class="btn btn-secondary mt-3">Quay về</a>
