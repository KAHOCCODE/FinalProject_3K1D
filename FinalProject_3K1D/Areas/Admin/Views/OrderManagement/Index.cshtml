@model IEnumerable<FinalProject_3K1D.Models.Food>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Order List</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New Order</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdSanPham)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenSanPham)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MoTa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apphich)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PLoai)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>
                    @Html.DisplayFor(modelItem => item.IdSanPham)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.TenSanPham)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.MoTa)
                    </td>
                        <td class="align-middle text-center">
                    @if (!string.IsNullOrEmpty(item.Apphich))
                    {
                       <img src="@Url.Content("~/image/Order/" + item.Apphich)" alt="Poster" style="max-height: 100px; max-width: 100px;" />
                    }
                    else
                    {
                      <span>Chưa có ảnh</span>
                    }
                        </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.PLoai)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.IdSanPham })" class="btn btn-warning">Edit</a> |
                        <a href="@Url.Action("Details", new { id = item.IdSanPham })" class="btn btn-info">Details</a> |
                        <a href="@Url.Action("Delete", new { id = item.IdSanPham })" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
