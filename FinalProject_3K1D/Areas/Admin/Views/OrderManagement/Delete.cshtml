@model FinalProject_3K1D.Models.Food

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Delete Order";
}

<h2>Delete Order</h2>

<h3>Are you sure you want to delete this order?</h3>

<div>
    <h4>Order Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdSanPham)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdSanPham)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TenSanPham)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenSanPham)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gia)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MoTa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MoTa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Apphich)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apphich)
            <img src="~/image/Order/@Model.Apphich" alt="Apphich Image" style="max-width: 150px;" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PLoai)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PLoai)
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="IdSanPham" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
