@model FinalProject_3K1D.Models.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="mb-4">Dashboard</h1>

<div class="container">
    <div class="row">
        <!-- Total Customers -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card border-primary shadow-lg rounded-lg">
                <div class="card-body text-center">
                    <div class="icon mb-3">
                        <i class="fas fa-users fa-3x text-primary"></i>
                    </div>
                    <h5 class="card-title text-primary">Total Customers</h5>
                    <h3 class="display-4 mb-0">@Model.TotalCustomers</h3>
                </div>
                <div class="card-footer bg-primary text-white text-center">
                    <small>All Customers</small>
                </div>
            </div>
        </div>

        <!-- Total Employees -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card border-success shadow-lg rounded-lg">
                <div class="card-body text-center">
                    <div class="icon mb-3">
                        <i class="fas fa-user-tie fa-3x text-success"></i>
                    </div>
                    <h5 class="card-title text-success">Total Employees</h5>
                    <h3 class="display-4 mb-0">@Model.TotalEmployees</h3>
                </div>
                <div class="card-footer bg-success text-white text-center">
                    <small>All Employees</small>
                </div>
            </div>
        </div>

        <!-- Total Movies -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card border-info shadow-lg rounded-lg">
                <div class="card-body text-center">
                    <div class="icon mb-3">
                        <i class="fas fa-film fa-3x text-info"></i>
                    </div>
                    <h5 class="card-title text-info">Total Movies</h5>
                    <h3 class="display-4 mb-0">@Model.TotalMovies</h3>
                </div>
                <div class="card-footer bg-info text-white text-center">
                    <small>All Movies</small>
                </div>
            </div>
        </div>

        <!-- Revenue by Theater -->
        <div class="col-12 mb-4">
            <div class="card border-warning shadow-lg rounded-lg">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">Revenue by Theater</h5>
                </div>
                <div class="card-body">
                    <canvas id="revenueChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>


    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script> <!-- FontAwesome for icons -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var ctx = document.getElementById('revenueChart').getContext('2d');
            var revenueChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.RevenueByTheater.Keys)),
                    datasets: [{
                        label: 'Revenue',
                        data: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.RevenueByTheater.Values)),
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        x: {
                            beginAtZero: true
                        },
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function (value) {
                                    return '$' + value;
                                }
                            }
                        }
                    }
                }
            });
        });
    </script>
